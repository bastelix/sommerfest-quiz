{% extends 'layout.twig' %}

{% from 'components/table.twig' import qr_rowcards %}

{% block title %}Ergebnisse{% endblock %}

{% block head %}
  <meta name="csrf-token" content="{{ csrf_token }}">
  <link rel="stylesheet" href="{{ basePath }}/css/main.css">
{% endblock %}

{% block body_class %}uk-background-muted uk-padding{% endblock %}

{% block body %}
  {% embed 'topbar.twig' %}
    {% block left %}
      <a href="{{ basePath }}/admin" class="uk-icon-button" uk-icon="icon: arrow-left; ratio: 2" title="Zurück" aria-label="Zurück"></a>
    {% endblock %}
    {% block center %}
      <div class="uk-flex uk-flex-middle">
        <div id="eventSelectWrap" class="uk-flex-1 uk-visible@m">
          <select id="eventSelect" class="uk-select" aria-label="{{ t('label_events') }}" data-placeholder="{{ t('label_event_select') }}"></select>
        </div>
        <button id="eventOpenBtn" class="uk-icon-button uk-margin-small-left uk-visible@m" uk-icon="icon: link-external" aria-label="{{ t('tip_event_open') }}" uk-tooltip="title: {{ t('tip_event_open') }}; pos: bottom" data-event-btn disabled></button>
      </div>
    {% endblock %}
  {% endembed %}
  <div class="uk-container uk-container-small">
    <div id="eventNotice" class="uk-alert uk-alert-primary" hidden data-empty="{{ t('text_no_events') }}" data-required="{{ t('text_event_required') }}" data-error="{{ t('text_events_fetch_error') }}"></div>
    <div class="uk-flex uk-flex-between uk-flex-middle">
      <h2 class="uk-heading-bullet">Ergebnisse</h2>
      <button id="resultsRefreshBtn" class="uk-icon-button" uk-icon="icon: refresh; ratio: 1.2" title="Aktualisieren" aria-label="Aktualisieren" data-event-btn disabled></button>
    </div>
    <div id="rankingGrid" class="uk-grid-small uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-4@m uk-margin-bottom" uk-grid uk-height-match="target: > div > .uk-card"></div>
    <div uk-lightbox="nav: thumbnav; slidenav: false">
      <div class="uk-overflow-auto">
        <table class="uk-table uk-table-divider uk-table-small uk-table-hover">
          <thead>
            <tr>
              <th class="uk-table-expand">Name</th>
              <th>Versuch</th>
              <th>Katalog</th>
              <th>Richtige</th>
              <th>Punkte</th>
              <th>{{ t('column_final_points') }}</th>
              <th>Zeit</th>
              <th>Rätselwort gelöst</th>
              <th>Beweisfoto</th>
            </tr>
          </thead>
          <tbody id="resultsTableBody"></tbody>
        </table>
      </div>
      {{ qr_rowcards('resultsCards', false) }}
    </div>
    <h3 class="uk-heading-bullet">Falsch beantwortete Fragen</h3>
    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-divider uk-table-small uk-table-hover">
        <thead>
          <tr>
            <th class="uk-table-expand">Name</th>
            <th>Katalog</th>
            <th>Frage</th>
          </tr>
        </thead>
        <tbody id="wrongTableBody"></tbody>
      </table>
    </div>
    {{ qr_rowcards('wrongCards', false) }}
    <ul id="resultsPagination" class="uk-pagination uk-flex-center"></ul>
  </div>
{% endblock %}

{% block scripts %}
  <script type="module" src="{{ basePath }}/js/events.js"></script>
  <script type="module" src="{{ basePath }}/js/results.js"></script>
{% endblock %}
