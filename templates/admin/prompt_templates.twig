{% extends 'admin/base.twig' %}

{% block content %}
  <div class="uk-container uk-container-large">
    <h2 class="uk-heading-bullet">{{ t('heading_prompt_templates') }}</h2>
  </div>
  <div class="uk-section uk-section-small">
    <div class="uk-container uk-container-large">
      <p class="uk-text-meta">{{ t('text_prompt_templates_hint') }}</p>
      <p class="uk-text-meta uk-margin-small">{{ t('help_prompt_template_placeholders')|raw }}</p>

      <div class="uk-card uk-card-default uk-card-body uk-card-small">
        <div class="uk-overflow-auto">
          <table
            id="promptTemplatesTable"
            class="uk-table uk-table-divider uk-table-small uk-table-hover uk-table-responsive"
            data-loading="{{ t('text_prompt_templates_loading') }}"
            data-empty="{{ t('text_prompt_templates_empty') }}"
            data-error="{{ t('text_prompt_templates_error') }}"
          >
            <thead>
              <tr>
                <th class="uk-width-small">{{ t('column_prompt_template_name') }}</th>
                <th>{{ t('column_prompt_template_prompt') }}</th>
                <th class="uk-table-shrink uk-text-center">{{ t('column_actions') }}</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td colspan="3">{{ t('text_prompt_templates_loading') }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div id="promptTemplateModal" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
      <h2 class="uk-modal-title">{{ t('heading_prompt_template_edit') }}</h2>
      <p id="promptTemplateInfo" class="uk-text-meta uk-margin-remove"></p>
      <form id="promptTemplateForm" class="uk-form-stacked">
        <input type="hidden" id="promptTemplateId">
        <div class="uk-margin">
          <label class="uk-form-label" for="promptTemplateName">{{ t('label_prompt_template_name') }}</label>
          <div class="uk-form-controls">
            <input class="uk-input" type="text" id="promptTemplateName" required>
          </div>
        </div>
        <div class="uk-margin">
          <label class="uk-form-label" for="promptTemplatePrompt">{{ t('label_prompt_template_prompt') }}</label>
          <div class="uk-form-controls">
            <textarea class="uk-textarea" id="promptTemplatePrompt" rows="14" required></textarea>
          </div>
        </div>
        <div class="uk-flex uk-flex-right uk-margin-top">
          <button type="submit" class="uk-button uk-button-primary">{{ t('action_save') }}</button>
          <button type="button" class="uk-button uk-button-default uk-margin-small-left uk-modal-close">{{ t('action_cancel') }}</button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}

{% block scripts %}
  <script>
    window.transPromptTemplateEdit = '{{ t('action_prompt_template_edit')|e('js') }}';
    window.transPromptTemplateSaved = '{{ t('notify_prompt_template_saved')|e('js') }}';
    window.transPromptTemplateSaveError = '{{ t('error_prompt_template_save')|e('js') }}';
    window.transPromptTemplateMissing = '{{ t('error_prompt_template_missing')|e('js') }}';
    window.transPromptTemplateInvalid = '{{ t('error_prompt_template_invalid')|e('js') }}';
  </script>
  <script type="module" src="{{ basePath }}/js/admin.js"></script>
  <script type="module" src="{{ basePath }}/js/prompt-templates.js"></script>
{% endblock %}
