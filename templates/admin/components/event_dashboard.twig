                      <option value="points">{{ t('option_dashboard_results_sort_points') }}</option>
                      <option value="name">{{ t('option_dashboard_results_sort_name') }}</option>
                    </select>
                  </div>
                  <div class="uk-margin-small">
                    <label class="uk-form-label" for="cfgDashboardResultsTitle">{{ t('label_dashboard_results_title') }}</label>
                    <input class="uk-input uk-form-small" type="text" id="cfgDashboardResultsTitle" data-module-results-option="title" placeholder="{{ t('label_dashboard_module_results') }}">
                    <div class="uk-text-meta">{{ t('text_dashboard_results_title_hint') }}</div>
                  </div>
                </div>
              </li>
              <li class="uk-card uk-card-default uk-card-small uk-card-body" data-module-id="infoBanner">
                <div class="uk-flex uk-flex-between uk-flex-middle">
                  <div>
                    <h4 class="uk-margin-remove">{{ t('label_dashboard_module_info') }}</h4>
                    <p class="uk-text-meta uk-margin-remove-top">{{ t('text_dashboard_module_info_hint') }}</p>
                  </div>
                  <div class="uk-flex uk-flex-middle">
                    <span class="module-handle uk-margin-small-right" uk-icon="icon: table"></span>
                    <label class="uk-margin-remove"><input class="uk-checkbox" type="checkbox" data-module-toggle> {{ t('label_dashboard_module_visible') }}</label>
