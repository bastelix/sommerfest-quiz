{% set eventName = event.name|default('') %}
<div class="uk-container uk-container-large">
  <h2
    id="eventDashboardHeading"
    class="uk-heading-bullet"
    data-title="{{ t('tab_event_dashboard') }}"
  >{{ eventName|e }}{% if eventName %} – {% endif %}{{ t('tab_event_dashboard') }}</h2>
  <hr class="admin-divider-line uk-margin-remove-top">
  {% include 'admin/components/event_controls.twig' with {
    currentEventUid: config.event_uid|default(''),
    currentEventName: eventName
  } %}
  <p class="uk-text-meta uk-margin-small">{{ 'Änderungen werden automatisch gespeichert.' }}</p>
  <form
    id="eventDashboardForm"
    class="uk-form-stacked"
    method="post"
    action="/config.json"
    data-config-form
  >
    <div class="uk-child-width-1-1 uk-grid-small" uk-grid>
      <div>
        <div class="uk-card uk-card-default uk-card-body">
          <div class="uk-margin">
            <label class="uk-form-label" for="cfgDashboardRefreshInterval">{{ t('label_dashboard_refresh_interval') }}</label>
            <div class="uk-form-controls">
              <input class="uk-input" type="number" min="5" max="300" id="cfgDashboardRefreshInterval" name="dashboardRefreshInterval" value="{{ config.dashboardRefreshInterval|default(15) }}">
            </div>
            <div class="uk-text-meta">{{ t('text_dashboard_refresh_hint') }}</div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="dashboardFixedHeight">{{ t('label_dashboard_fixed_height') }}</label>
            <div class="uk-form-controls">
              <input class="uk-input" type="text" id="dashboardFixedHeight" name="dashboardFixedHeight" value="{{ config.dashboardFixedHeight|default('') }}">
            </div>
            <div class="uk-text-meta">{{ t('text_dashboard_fixed_height_hint') }}</div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="cfgDashboardTheme">{{ t('label_dashboard_theme') }}</label>
            <div class="uk-form-controls">
              {% set cfgTheme = config.dashboardTheme|default('light') %}
              <select class="uk-select" id="cfgDashboardTheme" name="dashboardTheme">
                <option value="light" {% if cfgTheme != 'dark' %}selected{% endif %}>{{ t('option_theme_light') }}</option>
                <option value="dark" {% if cfgTheme == 'dark' %}selected{% endif %}>{{ t('option_theme_dark') }}</option>
              </select>
            </div>
            <div class="uk-text-meta">{{ t('tip_dashboard_theme') }}</div>
          </div>
          <input type="hidden" id="cfgDashboardModules" name="dashboardModules" value="">
          <input type="hidden" id="cfgDashboardSponsorModules" name="dashboardSponsorModules" value="">
          <div class="uk-margin-small-top">
            <div class="uk-flex uk-flex-middle uk-flex-wrap uk-margin-small-bottom" data-dashboard-variant-switch>
              <span class="uk-text-small uk-margin-small-right">{{ t('label_dashboard_variant') }}:</span>
              <div class="uk-button-group">
                <button class="uk-button uk-button-default uk-button-small uk-active" type="button" data-dashboard-variant="public">{{ t('option_dashboard_variant_public') }}</button>
                <button class="uk-button uk-button-default uk-button-small" type="button" data-dashboard-variant="sponsor">{{ t('option_dashboard_variant_sponsor') }}</button>
              </div>
            </div>
            <div class="uk-text-meta">{{ t('text_dashboard_variant_hint') }}</div>
          </div>
          <div class="uk-margin">
            <div class="uk-form-label">{{ t('label_dashboard_modules') }}</div>
            <div class="uk-text-meta">{{ t('text_dashboard_modules_hint') }}</div>
            <ul class="uk-list uk-list-divider uk-margin-small-top" data-dashboard-modules uk-sortable="handle: .module-handle">
              <li class="uk-card uk-card-default uk-card-small uk-card-body" data-module-id="header">
                <div class="uk-flex uk-flex-between uk-flex-middle">
                  <div>
                    <h4 class="uk-margin-remove">{{ t('label_dashboard_module_header') }}</h4>
                    <p class="uk-text-meta uk-margin-remove-top">{{ t('text_dashboard_module_header_hint') }}</p>
                  </div>
                  <div class="uk-flex uk-flex-middle">
                    <span class="module-handle uk-margin-small-right" uk-icon="icon: table"></span>
                    <label class="uk-margin-remove"><input class="uk-checkbox" type="checkbox" data-module-toggle checked> {{ t('label_dashboard_module_visible') }}</label>
                  </div>
                </div>
                <div class="uk-margin-small-top">
                  <label class="uk-form-label" for="cfgDashboardLayoutHeader">{{ t('label_dashboard_module_layout') }}</label>
                  <select class="uk-select uk-form-small" id="cfgDashboardLayoutHeader" data-module-layout data-default-layout="full">
                    <option value="auto">{{ t('option_dashboard_layout_auto') }}</option>
                    <option value="wide">{{ t('option_dashboard_layout_wide') }}</option>
                    <option value="full">{{ t('option_dashboard_layout_full') }}</option>
