                    <div class="uk-text-meta">{{ t('text_dashboard_results_page_hint') }}</div>
                  </div>
                  <div class="uk-margin-small">
                    <label class="uk-form-label" for="cfgDashboardResultsSort">{{ t('label_dashboard_results_sort') }}</label>
                    <select class="uk-select uk-form-small" id="cfgDashboardResultsSort" data-module-results-option="sort">
