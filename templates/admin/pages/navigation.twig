{% extends 'admin/base.twig' %}
{% set includeMarketingThemeVars = true %}

{% set useNavigationTree = use_navigation_tree|default(false) %}

{% block title %}{{ t('tab_navigation') }}{% endblock %}

{% block admin_head %}
  <script src="https://cdn.jsdelivr.net/npm/dompurify@3/dist/purify.min.js"></script>
  <script>
    window.profileVars = {
      NAME: {{ tenant.imprint_name|default('')|json_encode|raw }},
      STREET: {{ tenant.imprint_street|default('')|json_encode|raw }},
      ZIP: {{ tenant.imprint_zip|default('')|json_encode|raw }},
      CITY: {{ tenant.imprint_city|default('')|json_encode|raw }},
      EMAIL: {{ tenant.imprint_email|default('')|json_encode|raw }}
    };
  </script>
{% endblock %}

{% block content %}
      <div class="uk-container uk-container-large">
        <h1 class="uk-heading-bullet">{{ t('tab_navigation') }}</h1>
      </div>
      <div class="uk-container uk-container-large">
        {% set activePageNamespace = pageNamespace|default('default') %}
        {% set pageNamespaceOptions = available_namespaces|default([]) %}
        {% include 'admin/partials/namespace_select.twig' %}

        {% set menuDefinitions = menu_definitions|default([]) %}
        {% set hasMenus = menuDefinitions is not empty %}
        {% set selectedMenuId = selected_menu_id|default('') %}
        {% set navigationMode = navigation_mode|default('cms') %}
        {% set navigationVariants = navigation_variants|default([]) %}
        {% set selectedVariant = selected_navigation_variant|default(navigationVariants|first.value|default('footer_columns_2')) %}
        <div
          class="uk-card uk-card-default uk-card-body uk-margin"
          data-marketing-menu-overview
          data-base-path="{{ basePath }}"
          data-menus="{{ menuDefinitions|json_encode|e('html_attr') }}"
        >
          <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap">
            <div>
              <div class="uk-text-meta uk-text-uppercase">Navigation</div>
              <h3 class="uk-card-title uk-margin-remove">Menü-Übersicht</h3>
            </div>
            <span class="uk-text-meta">Einträge pro Namespace</span>
          </div>
          <form class="uk-form-stacked uk-margin-small-top" data-menu-create-form>
            <div class="uk-grid-small uk-child-width-1-1 uk-child-width-1-3@s uk-flex-middle" uk-grid>
              <div>
                <label class="uk-form-label" for="newMenuLabel">Neues Menü</label>
                <div class="uk-form-controls">
                  <input
                    id="newMenuLabel"
                    class="uk-input"
                    type="text"
                    name="label"
                    maxlength="64"
                    placeholder="z. B. Hauptnavigation"
                    required
                  >
                </div>
              </div>
              <div>
                <label class="uk-form-label" for="newMenuLocale">Locale</label>
                <div class="uk-form-controls">
                  <input
                    id="newMenuLocale"
                    class="uk-input"
                    type="text"
                    name="locale"
                    maxlength="8"
                    value="{{ locale()|default('de') }}"
                  >
                </div>
              </div>
              <div class="uk-flex uk-flex-middle">
                <label class="uk-flex uk-flex-middle uk-margin-small-right">
                  <input class="uk-checkbox" type="checkbox" name="isActive" checked>
                  <span class="uk-margin-small-left">Aktiv</span>
                </label>
                <button type="submit" class="uk-button uk-button-primary">Anlegen</button>
              </div>
            </div>
          </form>
          <div class="uk-overflow-auto admin-table-wrapper uk-margin-small-top">
            <table class="uk-table uk-table-divider uk-table-small uk-table-middle">
              <thead>
                <tr>
                  <th>Menü</th>
                  <th class="uk-table-shrink">Locale</th>
                  <th class="uk-table-shrink">Status</th>
                  <th class="uk-table-shrink uk-text-center">In Verwendung</th>
                  <th class="uk-table-shrink">Aktualisiert</th>
                  <th class="uk-table-shrink uk-text-right">Aktionen</th>
                </tr>
              </thead>
              <tbody data-menu-overview-items>
                <tr data-menu-overview-loading>
                  <td colspan="6">Lädt…</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-overview-feedback hidden role="status"></div>
        </div>
        <div id="menuDefinitionModal" uk-modal>
          <div class="uk-modal-dialog uk-modal-body">
            <h2 class="uk-modal-title" data-menu-modal-title>Menü bearbeiten</h2>
            <form class="uk-form-stacked" data-menu-modal-form>
              <input type="hidden" name="menuId">
              <input type="hidden" name="mode" value="rename">
              <div class="uk-margin">
                <label class="uk-form-label" for="menuModalLabel">Menü-Label</label>
                <div class="uk-form-controls">
                  <input
                    id="menuModalLabel"
                    class="uk-input"
                    type="text"
                    name="label"
                    maxlength="64"
                    required
                  >
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="menuModalLocale">Locale</label>
                <div class="uk-form-controls">
                  <input
                    id="menuModalLocale"
                    class="uk-input"
                    type="text"
                    name="locale"
                    maxlength="8"
                  >
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-flex uk-flex-middle">
                  <input class="uk-checkbox" type="checkbox" name="isActive">
                  <span class="uk-margin-small-left">Aktiv</span>
                </label>
              </div>
              <div class="uk-margin uk-flex uk-flex-right uk-flex-middle" style="gap: 8px;">
                <button type="button" class="uk-button uk-button-default uk-modal-close">Abbrechen</button>
                <button type="submit" class="uk-button uk-button-primary" data-menu-modal-submit>Speichern</button>
              </div>
            </form>
          </div>
        </div>

        <div class="uk-card uk-card-default uk-card-body uk-margin">
          <label class="uk-form-label" for="menuDefinitionSelect">Menü auswählen</label>
          <div class="uk-form-controls">
            <select
              id="menuDefinitionSelect"
              class="uk-select"
              data-selected="{{ selectedMenuId }}"
              {% if not hasMenus %}disabled{% endif %}
            >
              {% if not hasMenus %}
                <option value="" selected>Keine Menüs vorhanden</option>
              {% endif %}
              {% for menu in menuDefinitions %}
                <option
                  value="{{ menu.id }}"
                  {% if menu.id == selectedMenuId %}selected{% endif %}
                >{{ menu.label }} ({{ menu.locale }})</option>
              {% endfor %}
            </select>
          </div>
        </div>

        <div class="uk-card uk-card-default uk-card-body uk-margin">
          <label class="uk-form-label" for="menuVariantSelect">Footer-Layout</label>
          <div class="uk-form-controls">
            <select
              id="menuVariantSelect"
              class="uk-select"
              data-selected="{{ selectedVariant }}"
              data-menu-variant-select
            >
              {% for variant in navigationVariants %}
                {% set variantValue = variant.value|default('') %}
                <option
                  value="{{ variantValue|e('html_attr') }}"
                  {% if variantValue == selectedVariant %}selected{% endif %}
                >{{ variant.label|default(variantValue) }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="uk-text-meta uk-margin-small-top">
            Steuert, wie viele Spalten im Footer befüllt werden können (z. B. 2 oder 3 Listen).
          </div>
        </div>

        {% set marketingLocaleOptions = ['de', 'en'] %}
        {% set selectedMenuLocale = locale()|default('de') %}
        <div class="uk-card uk-card-default uk-card-body uk-margin">
          <label class="uk-form-label" for="menuLocaleSelect">Locale-Filter</label>
          <div class="uk-form-controls">
            <select id="menuLocaleSelect" class="uk-select" data-menu-locale-select>
              <option value="">Alle Locales</option>
              {% for localeOption in marketingLocaleOptions %}
                <option
                  value="{{ localeOption|e('html_attr') }}"
                  {% if localeOption == selectedMenuLocale %}selected{% endif %}
                >{{ localeOption }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="uk-text-meta uk-margin-small-top">
            Optional: Ohne Auswahl werden Menüeinträge aus allen Locales angezeigt.
          </div>
        </div>
        {% if useNavigationTree %}
          <div class="uk-grid-medium" uk-grid>
            <div class="uk-width-expand@m">
              <div
              class="uk-card uk-card-default uk-card-body uk-margin"
              data-marketing-menu-tree
              data-base-path="{{ basePath }}"
              data-menus="{{ menuDefinitions|json_encode|e('html_attr') }}"
              data-internal-links="{{ internal_links|default([])|json_encode|e('html_attr') }}"
              data-selected-menu-id="{{ hasMenus ? selectedMenuId : '' }}"
              data-namespace="{{ activePageNamespace|e('html_attr') }}"
              data-locale="{{ selectedMenuLocale|e('html_attr') }}"
              data-navigation-variant-options="{{ navigationVariants|json_encode|e('html_attr') }}"
              data-selected-navigation-variant="{{ selectedVariant|e('html_attr') }}"
              data-page-id="{{ anchor_page_id|default('')|e('html_attr') }}"
            >
                  <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap" style="gap: 12px;">
                  <div>
                    <h3 class="uk-card-title uk-margin-remove">Navigation</h3>
                    <div class="uk-text-meta uk-margin-small-top" data-menu-page-label></div>
                  </div>
                  <div class="uk-flex uk-flex-middle uk-flex-wrap" style="gap: 8px;">
                    <button
                      type="button"
                      class="uk-button uk-button-default"
                      data-menu-generate-ai
                      {% if selectedMenuId == '' %}disabled{% endif %}
                    >Menü automatisch generieren/aktualisieren</button>
                    <div class="uk-button-group">
                      <button
                        type="button"
                        class="uk-button uk-button-primary"
                        data-menu-save-all
                        disabled
                        aria-label="Änderungen speichern"
                      >Speichern</button>
                      <button
                        type="button"
                        class="uk-button uk-button-default"
                        data-menu-cancel
                        aria-label="Änderungen verwerfen"
                      >Abbrechen</button>
                    </div>
                    <div class="uk-button-group">
                      <button type="button" class="uk-button uk-button-default" data-menu-export {% if selectedMenuId == '' %}disabled{% endif %}>Menü exportieren</button>
                    <button type="button" class="uk-button uk-button-default" data-menu-import {% if selectedMenuId == '' %}disabled{% endif %}>Menü importieren</button>
                  </div>
                  <input type="file" accept="application/json" data-menu-import-input hidden>
                  <button type="button" class="uk-button uk-button-default" data-menu-add {% if selectedMenuId == '' %}disabled{% endif %}>Eintrag hinzufügen</button>
                  </div>
                </div>
                {% if not hasMenus %}
                  <div class="uk-alert uk-alert-warning uk-margin-small-top">
                    Erstelle zuerst ein Menü, um die Navigation zu bearbeiten.
                  </div>
                {% endif %}
                <p class="uk-text-meta uk-margin-small-top">
                  Pflege der Navigationslinks für das ausgewählte Menü. Drag &amp; Drop pro Ebene passt die Reihenfolgen an.
                </p>
                <p class="uk-text-meta uk-margin-small-top">
                  Basis: Label, Link, Sichtbarkeit. Erweitert: Layout, Icon, Locale, Startpage, Extern und SEO-Texte.
                </p>
                <p class="uk-text-meta uk-margin-small-top">
                  KI-Helfer: Generiert Menü-Einträge automatisch aus dem Seiteninhalt.
                </p>
                <p class="uk-text-meta uk-margin-small-top">
                  Erlaubte Links: basePath-relative Pfade (z. B. /landing), #Anker, ?Parameter oder http(s)/mailto/tel.
                </p>
                <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-feedback hidden role="status"></div>
                <div class="menu-tree" role="tree" aria-label="Navigation" tabindex="0" data-menu-tree></div>
              </div>
            </div>
            <aside class="uk-width-1-3@m uk-width-1-4@l">
              <div class="uk-card uk-card-default uk-card-body uk-margin">
                <div class="uk-flex uk-flex-between uk-flex-middle uk-margin-small-bottom">
                  <div>
                    <div class="uk-text-meta uk-text-uppercase">Preview</div>
                    <h4 class="uk-heading-line uk-margin-remove"><span>Navigation</span></h4>
                  </div>
                  <span class="uk-label">Beta</span>
                </div>
                <div class="uk-text-meta uk-margin-small-bottom" data-menu-preview-summary>Aktuelle Navigation</div>
                <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-preview-empty hidden>
                  Noch keine Menüeinträge vorhanden.
                </div>
                <div class="menu-preview" data-menu-preview-tree></div>
              </div>
            </aside>
          </div>
        {% else %}
          <div
              class="uk-card uk-card-default uk-card-body uk-margin"
              data-marketing-menu-manager
              data-base-path="{{ basePath }}"
              data-menus="{{ menuDefinitions|json_encode|e('html_attr') }}"
              data-internal-links="{{ internal_links|default([])|json_encode|e('html_attr') }}"
              data-selected-menu-id="{{ hasMenus ? selectedMenuId : '' }}"
              data-namespace="{{ activePageNamespace|e('html_attr') }}"
              data-locale="{{ selectedMenuLocale|e('html_attr') }}"
              data-navigation-variant-options="{{ navigationVariants|json_encode|e('html_attr') }}"
              data-selected-navigation-variant="{{ selectedVariant|e('html_attr') }}"
              data-page-id="{{ anchor_page_id|default('')|e('html_attr') }}"
          >
            <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap">
              <div>
                <h3 class="uk-card-title uk-margin-remove">Navigation</h3>
                <div class="uk-text-meta uk-margin-small-top" data-menu-page-label></div>
              </div>
              <div class="uk-flex uk-flex-middle" style="gap: 8px; flex-wrap: wrap;">
                <button
                  type="button"
                  class="uk-button uk-button-default"
                  data-menu-generate-ai
                  {% if selectedMenuId == '' %}disabled{% endif %}
                >Menü automatisch generieren/aktualisieren</button>
                <div class="uk-button-group">
                  <button
                    type="button"
                    class="uk-button uk-button-default"
                    data-menu-export
                    {% if selectedMenuId == '' %}disabled{% endif %}
                  >Menü exportieren</button>
                  <button
                    type="button"
                    class="uk-button uk-button-default"
                    data-menu-import
                    {% if selectedMenuId == '' %}disabled{% endif %}
                  >Menü importieren</button>
                </div>
                <input type="file" accept="application/json" data-menu-import-input hidden>
                <button
                  type="button"
                  class="uk-button uk-button-default"
                  data-menu-add
                  {% if selectedMenuId == '' %}disabled{% endif %}
                >Eintrag hinzufügen</button>
              </div>
            </div>
            {% if not hasMenus %}
              <div class="uk-alert uk-alert-warning uk-margin-small-top">
                Erstelle zuerst ein Menü, um die Navigation zu bearbeiten.
              </div>
            {% endif %}
            <p class="uk-text-meta uk-margin-small-top">
              Pflege der Navigationslinks für das ausgewählte Menü. Drag &amp; Drop ändert die Reihenfolge.
            </p>
            <p class="uk-text-meta uk-margin-small-top">
              Parent &amp; Layout steuern Dropdowns, Mega-Menüs und die Hierarchie. Sortierung per Drag &amp; Drop erfolgt je Ebene.
            </p>
            <p class="uk-text-meta uk-margin-small-top">
              KI-Helfer: Generiert Menü-Einträge automatisch aus dem Seiteninhalt.
            </p>
            <p class="uk-text-meta uk-margin-small-top">
              Erlaubte Links: basePath-relative Pfade (z. B. /landing), #Anker, ?Parameter oder http(s)/mailto/tel.
            </p>
            <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-feedback hidden role="status"></div>
            <div class="uk-overflow-auto admin-table-wrapper">
              <table class="uk-table uk-table-divider uk-table-small uk-table-middle">
                <thead>
                  <tr>
                    <th class="uk-table-shrink"></th>
                    <th>Label</th>
                    <th>Link</th>
                    <th class="uk-table-shrink">Parent</th>
                    <th class="uk-table-shrink">Layout</th>
                    <th class="uk-table-shrink">Icon</th>
                    <th class="uk-table-shrink">Locale</th>
                    <th class="uk-table-shrink uk-text-center">Startpage</th>
                    <th class="uk-table-shrink uk-text-center">Extern</th>
                    <th class="uk-table-shrink uk-text-center">Aktiv</th>
                    <th>Erklärung</th>
                    <th class="uk-table-shrink uk-text-right">Aktionen</th>
                  </tr>
                </thead>
                <tbody data-menu-items>
                  <tr data-menu-loading-row>
                    <td colspan="12">Lädt…</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <script>
              (() => {
                const container = document.querySelector('[data-marketing-menu-manager]');
                if (!container) {
                  return;
                }

                const getLoadingRow = () => container.querySelector('[data-menu-loading-row]');
                const showError = () => {
                  if (container.dataset.menuInitialized === 'true') {
                    return;
                  }
                  const loadingRow = getLoadingRow();
                  if (!loadingRow) {
                    return;
                  }
                  loadingRow.dataset.menuFallbackShown = 'true';
                  loadingRow.innerHTML = '<td colspan="12" class="uk-text-danger">Menü-Editor konnte nicht geladen werden. Bitte Seite neu laden oder Console prüfen.</td>';
                };

                const clearErrorIfReady = () => {
                  const loadingRow = getLoadingRow();
                  if (!loadingRow || loadingRow.dataset.menuFallbackShown !== 'true') {
                    return;
                  }
                  loadingRow.dataset.menuFallbackShown = 'false';
                  loadingRow.innerHTML = '<td colspan="12">Lädt…</td>';
                };

                window.addEventListener('load', () => {
                  window.setTimeout(showError, 2500);
                }, { once: true });

                const observer = new MutationObserver(() => {
                  if (container.dataset.menuInitialized === 'true') {
                    clearErrorIfReady();
                    observer.disconnect();
                  }
                });
                observer.observe(container, { attributes: true, attributeFilter: ['data-menu-initialized'] });
              })();
            </script>
          </div>
        {% endif %}

        {% set navSettings = navigation_settings|default({}) %}
        {% set menuPages = menu_pages|default([]) %}
        {% set hasMenuPages = menuPages is not empty %}
        <div
          class="uk-card uk-card-default uk-card-body uk-margin"
          data-menu-assignments
          data-base-path="{{ basePath }}"
        >
          <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap">
            <div>
              <div class="uk-text-meta uk-text-uppercase">Menü-Zuordnung</div>
              <h3 class="uk-card-title uk-margin-remove">Header &amp; Footer</h3>
            </div>
          </div>
          <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-assignments-feedback hidden role="status"></div>

          <div class="uk-margin">
            <h4 class="uk-heading-bullet">Header-Menü pro Seite/Locale</h4>
            <div class="uk-grid-small uk-child-width-1-1 uk-child-width-1-3@m" uk-grid>
              <div>
                <label class="uk-form-label" for="headerMenuPageSelect">Seite</label>
                <div class="uk-form-controls">
                  <select
                    id="headerMenuPageSelect"
                    class="uk-select"
                    data-header-page-select
                    {% if not hasMenuPages %}disabled{% endif %}
                  >
                    {% if not hasMenuPages %}
                      <option value="" selected>Keine Seiten vorhanden</option>
                    {% endif %}
                    {% for page in menuPages %}
                      <option value="{{ page.id|e('html_attr') }}">
                        {{ page.title|default(page.slug) }} (/{{ page.slug }})
                      </option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div>
                <label class="uk-form-label" for="headerMenuLocaleSelect">Locale</label>
                <div class="uk-form-controls">
                  <select id="headerMenuLocaleSelect" class="uk-select" data-header-locale-select>
                    {% for localeOption in marketingLocaleOptions %}
                      <option
                        value="{{ localeOption|e('html_attr') }}"
                        {% if localeOption == selectedMenuLocale %}selected{% endif %}
                      >{{ localeOption }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div>
                <label class="uk-form-label" for="headerMenuSelect">Header-Menü</label>
                <div class="uk-form-controls">
                  <select
                    id="headerMenuSelect"
                    class="uk-select"
                    data-header-menu-select
                    {% if not hasMenus %}disabled data-locked-disabled="true"{% endif %}
                  >
                    <option value="">Automatisch</option>
                    {% for menu in menuDefinitions %}
                      <option value="{{ menu.id }}" data-menu-locale="{{ menu.locale|e('html_attr') }}">
                        {{ menu.label }} ({{ menu.locale }})
                      </option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>
            <div class="uk-text-meta uk-margin-small-top">
              Automatisch bedeutet: Kein Override, Namespace-Standard bleibt aktiv.
            </div>
          </div>

          <hr class="uk-divider-icon">

          <div class="uk-margin">
            <h4 class="uk-heading-bullet">Footer-Spalten (Namespace)</h4>
            <div class="uk-grid-small uk-child-width-1-1 uk-child-width-1-4@m" uk-grid>
              <div>
                <label class="uk-form-label" for="footerGlobalLocaleSelect">Locale</label>
                <div class="uk-form-controls">
                  <select id="footerGlobalLocaleSelect" class="uk-select" data-footer-global-locale-select>
                    {% for localeOption in marketingLocaleOptions %}
                      <option
                        value="{{ localeOption|e('html_attr') }}"
                        {% if localeOption == selectedMenuLocale %}selected{% endif %}
                      >{{ localeOption }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              {% for slot in ['footer_1', 'footer_2', 'footer_3'] %}
                <div>
                  <label class="uk-form-label" for="footerGlobalSelect{{ loop.index }}">Slot {{ loop.index }}</label>
                  <div class="uk-form-controls">
                    <select
                      id="footerGlobalSelect{{ loop.index }}"
                      class="uk-select"
                      data-footer-global-select="{{ slot }}"
                      {% if not hasMenus %}disabled data-locked-disabled="true"{% endif %}
                    >
                      <option value="">Automatisch</option>
                      {% for menu in menuDefinitions %}
                        <option value="{{ menu.id }}" data-menu-locale="{{ menu.locale|e('html_attr') }}">
                          {{ menu.label }} ({{ menu.locale }})
                        </option>
                      {% endfor %}
                    </select>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="uk-text-meta uk-margin-small-top">
              Diese Auswahl gilt für das gesamte Namespace (fallback pro Locale).
            </div>
          </div>

          <div class="uk-margin">
            <h4 class="uk-heading-bullet">Footer-Spalten Override pro Seite</h4>
            <div class="uk-grid-small uk-child-width-1-1 uk-child-width-1-3@m uk-flex-middle" uk-grid>
              <div>
                <label class="uk-form-label" for="footerOverridePageSelect">Seite</label>
                <div class="uk-form-controls">
                  <select
                    id="footerOverridePageSelect"
                    class="uk-select"
                    data-footer-page-select
                    {% if not hasMenuPages %}disabled{% endif %}
                  >
                    {% if not hasMenuPages %}
                      <option value="" selected>Keine Seiten vorhanden</option>
                    {% endif %}
                    {% for page in menuPages %}
                      <option value="{{ page.id|e('html_attr') }}">
                        {{ page.title|default(page.slug) }} (/{{ page.slug }})
                      </option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div>
                <label class="uk-form-label" for="footerOverrideLocaleSelect">Locale</label>
                <div class="uk-form-controls">
                  <select id="footerOverrideLocaleSelect" class="uk-select" data-footer-locale-select>
                    {% for localeOption in marketingLocaleOptions %}
                      <option
                        value="{{ localeOption|e('html_attr') }}"
                        {% if localeOption == selectedMenuLocale %}selected{% endif %}
                      >{{ localeOption }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div>
                <label class="uk-form-label">Override aktivieren</label>
                <div class="uk-form-controls">
                  <label class="uk-flex uk-flex-middle">
                    <input
                      class="uk-checkbox"
                      type="checkbox"
                      data-footer-override-toggle
                    >
                    <span class="uk-margin-small-left">Menüs pro Seite überschreiben</span>
                  </label>
                </div>
              </div>
            </div>
            <div class="uk-grid-small uk-child-width-1-1 uk-child-width-1-3@m uk-margin-small-top" uk-grid>
              {% for slot in ['footer_1', 'footer_2', 'footer_3'] %}
                <div>
                  <label class="uk-form-label" for="footerOverrideSelect{{ loop.index }}">Slot {{ loop.index }}</label>
                  <div class="uk-form-controls">
                    <select
                      id="footerOverrideSelect{{ loop.index }}"
                      class="uk-select"
                      data-footer-override-select="{{ slot }}"
                      {% if not hasMenus %}disabled data-locked-disabled="true"{% endif %}
                    >
                      <option value="">Automatisch</option>
                      {% for menu in menuDefinitions %}
                        <option value="{{ menu.id }}" data-menu-locale="{{ menu.locale|e('html_attr') }}">
                          {{ menu.label }} ({{ menu.locale }})
                        </option>
                      {% endfor %}
                    </select>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="uk-text-meta uk-margin-small-top">
              Override aktiv = page-spezifische Zuweisungen. Deaktivieren löscht diese Zuweisungen.
            </div>
          </div>
        </div>

        <div class="uk-card uk-card-default uk-card-body uk-margin">
          <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap">
            <div>
              <div class="uk-text-meta uk-text-uppercase">Header</div>
              <h3 class="uk-card-title uk-margin-remove">Navigation &amp; Schalter</h3>
            </div>
          </div>
          <p class="uk-text-meta uk-margin-small-top">
            Logo, Theme-Toggles und Sprachmenü werden unter
            <a href="{{ basePath }}/admin/settings/header{% if namespaceQuery is defined and namespaceQuery is not empty %}?{{ namespaceQuery }}{% endif %}">Header-Einstellungen</a>
            konfiguriert.
          </p>
        </div>
      </div>
{% endblock %}

{% block scripts %}
  <script type="module" src="{{ basePath }}/js/admin.js"></script>
  {% if useNavigationTree %}
    <script type="module" src="{{ basePath }}/js/marketing-menu-tree.js"></script>
  {% else %}
    <script type="module" src="{{ basePath }}/js/marketing-menu-admin.js"></script>
  {% endif %}
  <script type="module" src="{{ basePath }}/js/tiptap-pages.js"></script>
{% endblock %}
