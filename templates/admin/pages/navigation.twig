{% extends 'layout.twig' %}

{% set useNavigationTree = use_navigation_tree|default(false) %}

{% block config_color_styles %}{% endblock %}

{% block title %}{{ t('tab_navigation') }}{% endblock %}

{% block head %}
  <meta name="csrf-token" content="{{ csrf_token }}">
  <link rel="stylesheet" href="{{ basePath }}/css/main.css">
  <link rel="stylesheet" href="{{ basePath }}/css/dark.css" media="(prefers-color-scheme: dark)">
  <link rel="stylesheet" href="{{ basePath }}/css/highcontrast.css">
  <script>
    window.profileVars = {
      NAME: {{ tenant.imprint_name|default('')|json_encode|raw }},
      STREET: {{ tenant.imprint_street|default('')|json_encode|raw }},
      ZIP: {{ tenant.imprint_zip|default('')|json_encode|raw }},
      CITY: {{ tenant.imprint_city|default('')|json_encode|raw }},
      EMAIL: {{ tenant.imprint_email|default('')|json_encode|raw }}
    };
  </script>
  <script>
    window.csrfToken = '{{ csrf_token|e('js') }}';
  </script>
{% endblock %}

{% block body_class %}uk-background-muted uk-padding admin-page{% endblock %}

{% block body %}
  {% embed 'topbar.twig' %}
    {% block left %}
      <button
        id="sidebarToggle"
        type="button"
        class="uk-navbar-toggle uk-visible@m uk-margin-small-right git-btn"
        aria-controls="adminSidebar"
        aria-expanded="true"
        aria-pressed="false"
        aria-label="{{ t('menu') }}"
      >
        <span uk-navbar-toggle-icon></span>
      </button>
      <a href="{{ basePath }}/admin/dashboard" class="uk-navbar-item uk-logo uk-margin-small-left uk-visible@s">
        QuizRace Admin
      </a>
    {% endblock %}
    {% block center %}
      {% include 'admin/components/namespace_breadcrumb.twig' %}
    {% endblock %}
    {% block offcanvas %}
      <div id="qr-offcanvas" uk-offcanvas="overlay: true">
        <div class="uk-offcanvas-bar">
          <button class="uk-offcanvas-close" type="button" uk-close aria-label="{{ t('menu') }}"></button>
          <h3 class="uk-margin-small">QuizRace</h3>
          {% include 'admin/_nav.twig' %}
        </div>
      </div>
    {% endblock %}
    {% block headerbar %}
      <div class="uk-container uk-container-large">
        <h1 class="uk-heading-bullet">{{ t('tab_navigation') }}</h1>
      </div>
    {% endblock %}
  {% endembed %}

  <div class="uk-grid-collapse" uk-grid>
    <aside id="adminSidebar" class="uk-width-1-4@m uk-width-1-5@l uk-visible@m qr-sidebar">
      <div class="uk-card qr-card uk-card-body qr-sidebar-card">
        {% include 'admin/_nav.twig' %}
      </div>
    </aside>
    <main class="uk-width-expand uk-padding-small@xs uk-padding">
      <div class="uk-container uk-container-large">
        {% set activePageNamespace = pageNamespace|default('default') %}
        {% set pageNamespaceOptions = available_namespaces|default([]) %}
        {% if pageNamespaceOptions is empty %}
          {% set pageNamespaceOptions = [{
            namespace: activePageNamespace,
            label: null,
            is_active: true
          }] %}
        {% endif %}
        <div class="uk-card uk-card-default uk-card-body uk-margin-small">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-1-1 uk-width-expand@m">
              <label class="uk-form-label" for="pageNamespaceSelect">{{ t('label_project_namespace') }}</label>
              <div class="uk-form-controls">
                <select
                  id="pageNamespaceSelect"
                  class="uk-select"
                  data-page-namespace="{{ activePageNamespace|e('html_attr') }}"
                >
                  {% for entry in pageNamespaceOptions %}
                    {% set entryNamespace = entry.namespace|default('') %}
                    {% set entryLabel = entry.label|default('') %}
                    {% set entryIsInactive = entry.is_active is defined and not entry.is_active %}
                    <option
                      value="{{ entryNamespace|e('html_attr') }}"
                      {% if entryNamespace == activePageNamespace %}selected{% endif %}
                    >
                      {{ entryNamespace }}
                      {% if entryLabel is not empty %} – {{ entryLabel }}{% endif %}
                      {% if entryIsInactive %} – inaktiv{% endif %}
                    </option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
        </div>

        {% set pagesList = pages|default([]) %}
        {% set hasPages = pagesList is not empty %}
        {% set selectedSlug = selectedPageSlug|default('') %}
        {% if selectedSlug == '' and hasPages %}
          {% set selectedSlug = (pagesList|first).slug %}
        {% endif %}
        <div class="uk-card uk-card-default uk-card-body uk-margin">
          <label class="uk-form-label" for="pageContentSelect">Marketing-Seite</label>
          <div class="uk-form-controls">
            <select
              id="pageContentSelect"
              class="uk-select"
              data-selected="{{ selectedSlug }}"
              {% if not hasPages %}disabled{% endif %}
            >
              {% if not hasPages %}
                <option value="" selected>Keine Marketing-Seiten vorhanden</option>
              {% endif %}
              {% for page in pagesList %}
                {% set pageLabel = page.title is not empty ? page.title : page.slug|replace({'-': ' '})|title %}
                <option
                  value="{{ page.slug }}"
                  {% if page.slug == selectedSlug %}selected{% endif %}
                >{{ pageLabel }}</option>
              {% endfor %}
            </select>
          </div>
        </div>

        {% set marketingLocaleOptions = ['de', 'en'] %}
        {% set selectedMenuLocale = locale()|default('de') %}
        {% set menuPagesData = hasPages ? menu_pages|default([]) : [] %}
        {% if useNavigationTree %}
          <div class="uk-grid-medium" uk-grid>
            <div class="uk-width-expand@m">
              <div
                class="uk-card uk-card-default uk-card-body uk-margin"
                data-marketing-menu-tree
                data-base-path="{{ basePath }}"
                data-pages="{{ menuPagesData|json_encode|e('html_attr') }}"
                data-selected-slug="{{ hasPages ? selectedSlug : '' }}"
                data-namespace="{{ activePageNamespace|e('html_attr') }}"
                data-locale="{{ selectedMenuLocale|e('html_attr') }}"
              >
                <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap" style="gap: 12px;">
                  <div>
                    <h3 class="uk-card-title uk-margin-remove">Hauptmenü</h3>
                    <div class="uk-text-meta uk-margin-small-top" data-menu-page-label></div>
                  </div>
                  <div class="uk-flex uk-flex-middle uk-flex-wrap" style="gap: 8px;">
                    <div class="uk-button-group">
                      <button
                        type="button"
                        class="uk-button uk-button-primary"
                        data-menu-save-all
                        disabled
                        aria-label="Änderungen speichern"
                      >Speichern</button>
                      <button
                        type="button"
                        class="uk-button uk-button-default"
                        data-menu-cancel
                        aria-label="Änderungen verwerfen"
                      >Abbrechen</button>
                    </div>
                    <div class="uk-button-group">
                      <button type="button" class="uk-button uk-button-default" data-menu-export {% if selectedSlug == '' %}disabled{% endif %}>Menü exportieren</button>
                      <button type="button" class="uk-button uk-button-default" data-menu-import {% if selectedSlug == '' %}disabled{% endif %}>Menü importieren</button>
                    </div>
                    <input type="file" accept="application/json" data-menu-import-input hidden>
                    <button type="button" class="uk-button uk-button-default" data-menu-add {% if selectedSlug == '' %}disabled{% endif %}>Eintrag hinzufügen</button>
                  </div>
                </div>
                {% if not hasPages %}
                  <div class="uk-alert uk-alert-warning uk-margin-small-top">
                    Erstelle zuerst eine Marketing-Seite, um das Hauptmenü zu bearbeiten.
                  </div>
                {% endif %}
                <p class="uk-text-meta uk-margin-small-top">
                  Pflege der Navigationslinks für die ausgewählte Marketing-Seite. Drag &amp; Drop pro Ebene passt die Reihenfolgen an.
                </p>
                <p class="uk-text-meta uk-margin-small-top">
                  Basis: Label, Link, Sichtbarkeit. Erweitert: Layout, Icon, Locale, Startpage, Extern und SEO-Texte.
                </p>
                <p class="uk-text-meta uk-margin-small-top">
                  Erlaubte Links: basePath-relative Pfade (z. B. /landing), #Anker, ?Parameter oder http(s)/mailto/tel.
                </p>
                <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-feedback hidden role="status"></div>
                <div class="menu-tree" role="tree" aria-label="Navigation" tabindex="0" data-menu-tree></div>
              </div>
            </div>
            <aside class="uk-width-1-3@m uk-width-1-4@l">
              <div class="uk-card uk-card-default uk-card-body uk-margin">
                <div class="uk-flex uk-flex-between uk-flex-middle uk-margin-small-bottom">
                  <div>
                    <div class="uk-text-meta uk-text-uppercase">Preview</div>
                    <h4 class="uk-heading-line uk-margin-remove"><span>Navigation</span></h4>
                  </div>
                  <span class="uk-label">Beta</span>
                </div>
                <div class="uk-text-meta uk-margin-small-bottom" data-menu-preview-summary>Aktuelle Navigation</div>
                <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-preview-empty hidden>
                  Noch keine Menüeinträge vorhanden.
                </div>
                <ul class="uk-nav uk-nav-default" data-menu-preview-tree></ul>
              </div>
            </aside>
          </div>
        {% else %}
          <div
            class="uk-card uk-card-default uk-card-body uk-margin"
            data-marketing-menu-manager
            data-base-path="{{ basePath }}"
            data-pages="{{ menuPagesData|json_encode|e('html_attr') }}"
            data-selected-slug="{{ hasPages ? selectedSlug : '' }}"
            data-namespace="{{ activePageNamespace|e('html_attr') }}"
            data-locale="{{ selectedMenuLocale|e('html_attr') }}"
          >
            <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap">
              <div>
                <h3 class="uk-card-title uk-margin-remove">Hauptmenü</h3>
                <div class="uk-text-meta uk-margin-small-top" data-menu-page-label></div>
              </div>
              <div class="uk-flex uk-flex-middle" style="gap: 8px; flex-wrap: wrap;">
                <div class="uk-button-group">
                  <button
                    type="button"
                    class="uk-button uk-button-default"
                    data-menu-export
                    {% if selectedSlug == '' %}disabled{% endif %}
                  >Menü exportieren</button>
                  <button
                    type="button"
                    class="uk-button uk-button-default"
                    data-menu-import
                    {% if selectedSlug == '' %}disabled{% endif %}
                  >Menü importieren</button>
                </div>
                <input type="file" accept="application/json" data-menu-import-input hidden>
                <button
                  type="button"
                  class="uk-button uk-button-default"
                  data-menu-add
                  {% if selectedSlug == '' %}disabled{% endif %}
                >Eintrag hinzufügen</button>
              </div>
            </div>
            {% if not hasPages %}
              <div class="uk-alert uk-alert-warning uk-margin-small-top">
                Erstelle zuerst eine Marketing-Seite, um das Hauptmenü zu bearbeiten.
              </div>
            {% endif %}
            <p class="uk-text-meta uk-margin-small-top">
              Pflege der Navigationslinks für die ausgewählte Marketing-Seite. Drag &amp; Drop ändert die Reihenfolge.
            </p>
            <p class="uk-text-meta uk-margin-small-top">
              Parent &amp; Layout steuern Dropdowns, Mega-Menüs und die Hierarchie. Sortierung per Drag &amp; Drop erfolgt je Ebene.
            </p>
            <p class="uk-text-meta uk-margin-small-top">
              Erlaubte Links: basePath-relative Pfade (z. B. /landing), #Anker, ?Parameter oder http(s)/mailto/tel.
            </p>
            <div class="uk-alert uk-alert-primary uk-margin-small" data-menu-feedback hidden role="status"></div>
            <div class="uk-overflow-auto admin-table-wrapper">
              <table class="uk-table uk-table-divider uk-table-small uk-table-middle">
                <thead>
                  <tr>
                    <th class="uk-table-shrink"></th>
                    <th>Label</th>
                    <th>Link</th>
                    <th class="uk-table-shrink">Parent</th>
                    <th class="uk-table-shrink">Layout</th>
                    <th class="uk-table-shrink">Icon</th>
                    <th class="uk-table-shrink">Locale</th>
                    <th class="uk-table-shrink uk-text-center">Startpage</th>
                    <th class="uk-table-shrink uk-text-center">Extern</th>
                    <th class="uk-table-shrink uk-text-center">Aktiv</th>
                    <th>Erklärung</th>
                    <th class="uk-table-shrink uk-text-right">Aktionen</th>
                  </tr>
                </thead>
                <tbody data-menu-items>
                  <tr data-menu-loading-row>
                    <td colspan="12">Lädt…</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <script>
              (() => {
                const container = document.querySelector('[data-marketing-menu-manager]');
                if (!container) {
                  return;
                }

                const getLoadingRow = () => container.querySelector('[data-menu-loading-row]');
                const showError = () => {
                  if (container.dataset.menuInitialized === 'true') {
                    return;
                  }
                  const loadingRow = getLoadingRow();
                  if (!loadingRow) {
                    return;
                  }
                  loadingRow.dataset.menuFallbackShown = 'true';
                  loadingRow.innerHTML = '<td colspan="12" class="uk-text-danger">Menü-Editor konnte nicht geladen werden. Bitte Seite neu laden oder Console prüfen.</td>';
                };

                const clearErrorIfReady = () => {
                  const loadingRow = getLoadingRow();
                  if (!loadingRow || loadingRow.dataset.menuFallbackShown !== 'true') {
                    return;
                  }
                  loadingRow.dataset.menuFallbackShown = 'false';
                  loadingRow.innerHTML = '<td colspan="12">Lädt…</td>';
                };

                window.addEventListener('load', () => {
                  window.setTimeout(showError, 2500);
                }, { once: true });

                const observer = new MutationObserver(() => {
                  if (container.dataset.menuInitialized === 'true') {
                    clearErrorIfReady();
                    observer.disconnect();
                  }
                });
                observer.observe(container, { attributes: true, attributeFilter: ['data-menu-initialized'] });
              })();
            </script>
          </div>
        {% endif %}

        <div class="uk-margin">
          <ul class="uk-accordion" uk-accordion="collapsible: true">
            <li>
              <a class="uk-accordion-title" href="#">Erweitert</a>
              <div class="uk-accordion-content">
                {% include 'admin/components/page_tree.twig' %}
                <div
                  class="uk-card uk-card-default uk-card-body uk-margin"
                  data-page-namespace-manager
                  data-pages="{{ page_namespace_list|json_encode|e('html_attr') }}"
                  data-page-select-id="pageContentSelect"
                  data-page-select-key="slug"
                  data-page-selection-param="pageSlug"
                  data-page-selection-value-key="slug"
                  data-active-namespace="{{ activePageNamespace|e('html_attr') }}"
                  data-success-message="Seite verschoben."
                  data-error-message="Namespace konnte nicht geändert werden."
                >
                  <div class="uk-grid-small uk-flex-middle" uk-grid>
                    <div class="uk-width-1-1 uk-width-expand@m">
                      <label class="uk-form-label" for="pageNamespacePerPageSelect">{{ t('label_page_project_namespace') }}</label>
                      <div class="uk-form-controls">
                        <select id="pageNamespacePerPageSelect" class="uk-select" data-page-namespace-select>
                          {% for entry in pageNamespaceOptions %}
                            {% set entryNamespace = entry.namespace|default('') %}
                            {% set entryLabel = entry.label|default('') %}
                            {% set entryIsInactive = entry.is_active is defined and not entry.is_active %}
                            <option value="{{ entryNamespace|e('html_attr') }}">
                              {{ entryNamespace }}
                              {% if entryLabel is not empty %} – {{ entryLabel }}{% endif %}
                              {% if entryIsInactive %} – inaktiv{% endif %}
                            </option>
                          {% endfor %}
                        </select>
                      </div>
                    </div>
                  </div>
                  <div class="uk-alert uk-alert-primary uk-margin-small-top" data-page-namespace-feedback hidden role="status"></div>
                </div>

                <div class="uk-card uk-card-default uk-card-body uk-margin">
                  <label class="uk-form-label" for="menuLocaleSelect">Locale-Filter</label>
                  <div class="uk-form-controls">
                    <select id="menuLocaleSelect" class="uk-select" data-menu-locale-select>
                      <option value="">Alle Locales</option>
                      {% for localeOption in marketingLocaleOptions %}
                        <option
                          value="{{ localeOption|e('html_attr') }}"
                          {% if localeOption == selectedMenuLocale %}selected{% endif %}
                        >{{ localeOption }}</option>
                      {% endfor %}
                    </select>
                  </div>
                  <div class="uk-text-meta uk-margin-small-top">
                    Optional: Ohne Auswahl werden Menüeinträge aus allen Locales angezeigt.
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% block scripts %}
  <script type="module" src="{{ basePath }}/js/admin.js"></script>
  {% if useNavigationTree %}
    <script type="module" src="{{ basePath }}/js/marketing-menu-tree.js"></script>
  {% else %}
    <script type="module" src="{{ basePath }}/js/marketing-menu-admin.js"></script>
  {% endif %}
  <script type="module" src="{{ basePath }}/js/trumbowyg-pages.js"></script>
{% endblock %}
