{% set includeMarketingThemeVars = true %}
{% extends 'admin/base.twig' %}

{% block title %}{{ t('tab_cookies') }}{% endblock %}

{% block content %}
      <div class="uk-container uk-container-large">
        <h1 class="uk-heading-bullet">{{ t('tab_cookies') }}</h1>
      </div>
      <div class="uk-container uk-container-large">
        {% set activePageNamespace = pageNamespace|default('default') %}
        {% set pageNamespaceOptions = available_namespaces|default([]) %}
        {% include 'admin/partials/namespace_select.twig' %}


        <div
          class="uk-card uk-card-default uk-card-body uk-margin-small"
          data-project-settings
          data-endpoint="{{ basePath }}/admin/projects/settings"
        >
          <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap">
            <h3 class="uk-card-title uk-margin-remove">{{ t('tab_cookies') }}</h3>
            <span class="uk-text-meta" data-project-settings-updated>
              {% if cookie_settings.updated_at %}
                Zuletzt gespeichert: {{ cookie_settings.updated_at }}
              {% endif %}
            </span>
          </div>
          <form class="uk-form-stacked uk-margin-small-top" data-project-settings-form>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieConsentEnabled">Cookie-Banner aktiv</label>
              <div class="uk-form-controls">
                <label>
                  <input
                    class="uk-checkbox"
                    type="checkbox"
                    id="cookieConsentEnabled"
                    name="cookie_consent_enabled"
                    {% if cookie_settings.cookie_consent_enabled %}checked{% endif %}
                  >
                  Banner anzeigen
                </label>
              </div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieStorageKey">Storage-Key</label>
              <div class="uk-form-controls">
                <input
                  class="uk-input"
                  type="text"
                  id="cookieStorageKey"
                  name="cookie_storage_key"
                  value="{{ cookie_settings.cookie_storage_key|default('')|e('html_attr') }}"
                  autocomplete="off"
                >
              </div>
              <div class="uk-text-meta">Wird im Local Storage gespeichert.</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieBannerTextDe">Banner-Text (DE)</label>
              <div class="uk-form-controls">
                <textarea
                  class="uk-textarea"
                  id="cookieBannerTextDe"
                  name="cookie_banner_text_de"
                  rows="4"
                >{{ cookie_settings.cookie_banner_text_de|default('')|e }}</textarea>
              </div>
              <div class="uk-text-meta">Hinweistext für externe Inhalte (Deutsch).</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieBannerTextEn">Banner-Text (EN)</label>
              <div class="uk-form-controls">
                <textarea
                  class="uk-textarea"
                  id="cookieBannerTextEn"
                  name="cookie_banner_text_en"
                  rows="4"
                >{{ cookie_settings.cookie_banner_text_en|default('')|e }}</textarea>
              </div>
              <div class="uk-text-meta">Hinweistext für externe Inhalte (Englisch).</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieVendorFlags">Vendor-Flags (JSON)</label>
              <div class="uk-form-controls">
                <textarea
                  class="uk-textarea"
                  id="cookieVendorFlags"
                  name="cookie_vendor_flags"
                  rows="4"
                >{{ cookie_settings.cookie_vendor_flags|default({})|json_encode|e }}</textarea>
              </div>
              <div class="uk-text-meta">Optional: Strukturierte Flags für Drittanbieter (JSON).</div>
            </div>
            <h4 class="uk-heading-divider uk-margin-medium-top">Datenschutzbestimmungen</h4>
            <p class="uk-text-meta uk-margin-remove-top">
              Verlinke hier die Datenschutzerklärung für die Cookie-Kommunikation.
            </p>
            <div class="uk-margin">
              <label class="uk-form-label" for="privacyUrlDe">Datenschutz-URL (DE)</label>
              <div class="uk-form-controls">
                <input
                  class="uk-input"
                  type="url"
                  id="privacyUrlDe"
                  name="privacy_url_de"
                  value="{{ cookie_settings.privacy_url_de|default('')|e('html_attr') }}"
                  autocomplete="off"
                  placeholder="{{ basePath }}/datenschutz"
                >
              </div>
              <div class="uk-text-meta">Optionaler Link zur Datenschutzseite (Deutsch).</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="privacyUrlEn">Datenschutz-URL (EN)</label>
              <div class="uk-form-controls">
                <input
                  class="uk-input"
                  type="url"
                  id="privacyUrlEn"
                  name="privacy_url_en"
                  value="{{ cookie_settings.privacy_url_en|default('')|e('html_attr') }}"
                  autocomplete="off"
                  placeholder="{{ basePath }}/privacy"
                >
              </div>
              <div class="uk-text-meta">Optionaler Link zur Datenschutzseite (Englisch).</div>
            </div>
            <div class="uk-flex uk-flex-middle uk-grid-small" uk-grid>
              <div>
                <button type="submit" class="uk-button uk-button-primary">Einstellungen speichern</button>
              </div>
              <div class="uk-text-meta" data-project-settings-status></div>
            </div>
          </form>
        </div>
      </div>
{% endblock %}

{% block scripts %}
  <script>
    window.profileVars = {
      NAME: {{ tenant.imprint_name|default('')|json_encode|raw }},
      STREET: {{ tenant.imprint_street|default('')|json_encode|raw }},
      ZIP: {{ tenant.imprint_zip|default('')|json_encode|raw }},
      CITY: {{ tenant.imprint_city|default('')|json_encode|raw }},
      EMAIL: {{ tenant.imprint_email|default('')|json_encode|raw }}
    };
  </script>
  <script>
    window.csrfToken = '{{ csrf_token|e('js') }}';
  </script>
  <script type="module" src="{{ basePath }}/js/admin.js"></script>
{% endblock %}
