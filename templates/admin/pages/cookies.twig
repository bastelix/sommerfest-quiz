{% extends 'admin/base.twig' %}
{% set includeMarketingThemeVars = true %}

{% block title %}{{ t('tab_cookies') }}{% endblock %}

{% block admin_head %}
  <script>
    window.profileVars = {
      NAME: {{ tenant.imprint_name|default('')|json_encode|raw }},
      STREET: {{ tenant.imprint_street|default('')|json_encode|raw }},
      ZIP: {{ tenant.imprint_zip|default('')|json_encode|raw }},
      CITY: {{ tenant.imprint_city|default('')|json_encode|raw }},
      EMAIL: {{ tenant.imprint_email|default('')|json_encode|raw }}
    };
  </script>
{% endblock %}

{% block content %}
      <div class="uk-container uk-container-large">
        <h1 class="uk-heading-bullet">{{ t('tab_cookies') }}</h1>
      </div>
      <div class="uk-container uk-container-large">
        {% set activePageNamespace = pageNamespace|default('default') %}
        {% set pageNamespaceOptions = available_namespaces|default([]) %}
        {% include 'admin/partials/namespace_select.twig' %}


        <div
          class="uk-card uk-card-default uk-card-body uk-margin-small"
          data-project-settings
          data-endpoint="{{ basePath }}/admin/projects/settings"
        >
          <div class="uk-flex uk-flex-between uk-flex-middle uk-flex-wrap">
            <h3 class="uk-card-title uk-margin-remove">{{ t('tab_cookies') }}</h3>
            <span class="uk-text-meta" data-project-settings-updated>
              {% if cookie_settings.updated_at %}
                {{ t('label_cookies_last_saved') }} {{ cookie_settings.updated_at }}
              {% endif %}
            </span>
          </div>
          <form class="uk-form-stacked uk-margin-small-top" data-project-settings-form>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieConsentEnabled">{{ t('label_cookies_banner_active') }}</label>
              <div class="uk-form-controls">
                <label>
                  <input
                    class="uk-checkbox"
                    type="checkbox"
                    id="cookieConsentEnabled"
                    name="cookie_consent_enabled"
                    {% if cookie_settings.cookie_consent_enabled %}checked{% endif %}
                  >
                  {{ t('label_cookies_show_banner') }}
                </label>
              </div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieStorageKey">{{ t('label_cookies_storage_key') }}</label>
              <div class="uk-form-controls">
                <input
                  class="uk-input"
                  type="text"
                  id="cookieStorageKey"
                  name="cookie_storage_key"
                  value="{{ cookie_settings.cookie_storage_key|default('')|e('html_attr') }}"
                  autocomplete="off"
                >
              </div>
              <div class="uk-text-meta">{{ t('text_cookies_storage_key_hint') }}</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieBannerTextDe">{{ t('label_cookies_banner_text_de') }}</label>
              <div class="uk-form-controls">
                <textarea
                  class="uk-textarea"
                  id="cookieBannerTextDe"
                  name="cookie_banner_text_de"
                  rows="4"
                >{{ cookie_settings.cookie_banner_text_de|default('')|e }}</textarea>
              </div>
              <div class="uk-text-meta">{{ t('text_cookies_banner_text_de_hint') }}</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieBannerTextEn">{{ t('label_cookies_banner_text_en') }}</label>
              <div class="uk-form-controls">
                <textarea
                  class="uk-textarea"
                  id="cookieBannerTextEn"
                  name="cookie_banner_text_en"
                  rows="4"
                >{{ cookie_settings.cookie_banner_text_en|default('')|e }}</textarea>
              </div>
              <div class="uk-text-meta">{{ t('text_cookies_banner_text_en_hint') }}</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="cookieVendorFlags">{{ t('label_cookies_vendor_flags') }}</label>
              <div class="uk-form-controls">
                <textarea
                  class="uk-textarea"
                  id="cookieVendorFlags"
                  name="cookie_vendor_flags"
                  rows="4"
                >{{ cookie_settings.cookie_vendor_flags|default({})|json_encode|e }}</textarea>
              </div>
              <div class="uk-text-meta">{{ t('text_cookies_vendor_flags_hint') }}</div>
            </div>
            <h4 class="uk-heading-divider uk-margin-medium-top">{{ t('label_cookies_privacy_policy') }}</h4>
            <p class="uk-text-meta uk-margin-remove-top">
              {{ t('text_cookies_privacy_policy_hint') }}
            </p>
            <div class="uk-margin">
              <label class="uk-form-label" for="privacyUrlDe">{{ t('label_cookies_privacy_url_de') }}</label>
              <div class="uk-form-controls">
                <input
                  class="uk-input"
                  type="url"
                  id="privacyUrlDe"
                  name="privacy_url_de"
                  value="{{ cookie_settings.privacy_url_de|default('')|e('html_attr') }}"
                  autocomplete="off"
                  placeholder="{{ basePath }}/datenschutz"
                >
              </div>
              <div class="uk-text-meta">{{ t('text_cookies_privacy_url_de_hint') }}</div>
            </div>
            <div class="uk-margin">
              <label class="uk-form-label" for="privacyUrlEn">{{ t('label_cookies_privacy_url_en') }}</label>
              <div class="uk-form-controls">
                <input
                  class="uk-input"
                  type="url"
                  id="privacyUrlEn"
                  name="privacy_url_en"
                  value="{{ cookie_settings.privacy_url_en|default('')|e('html_attr') }}"
                  autocomplete="off"
                  placeholder="{{ basePath }}/privacy"
                >
              </div>
              <div class="uk-text-meta">{{ t('text_cookies_privacy_url_en_hint') }}</div>
            </div>
            <div class="uk-flex uk-flex-middle uk-grid-small" uk-grid>
              <div>
                <button type="submit" class="uk-button uk-button-primary">{{ t('action_save_settings') }}</button>
              </div>
              <div class="uk-text-meta" data-project-settings-status></div>
            </div>
          </form>
        </div>
      </div>
{% endblock %}

{% block scripts %}
  <script type="module" src="{{ basePath }}/js/admin.js"></script>
{% endblock %}
