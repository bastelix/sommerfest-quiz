{% extends 'layout.twig' %}
{% set includeMarketingThemeVars = true %}

{% block config_color_styles %}{% endblock %}

{% block title %}{{ t('heading_pages') }}{% endblock %}

{% block head %}
  <meta name="csrf-token" content="{{ csrf_token }}">
  <link rel="stylesheet" href="{{ basePath }}/css/main.css">
  <link rel="stylesheet" href="{{ basePath }}/css/dark.css" id="admin-dark-css" data-theme-style="dark" media="(prefers-color-scheme: dark)">
  <link rel="stylesheet" href="{{ basePath }}/css/highcontrast.css" id="admin-highcontrast-css" data-theme-style="high-contrast">
  {% set activeNamespace = pageNamespace|default('default') %}
  {% set hasNamespaceStyles = activeNamespace is not empty and activeNamespace != 'default' %}
  {% set namespaceSegment = hasNamespaceStyles ? '/' ~ activeNamespace : '' %}
  {% set namespaceTokensVersionsMap = namespaceTokensVersions|default({}) %}
  {% set namespaceTokensQuery = namespaceTokensVersionsMap[activeNamespace]|default(namespaceTokensVersion|default('')) %}
  <link rel="stylesheet" href="{{ basePath }}/css/uikit.min.css" id="preview-uikit-css" data-preview-asset="page-preview" media="all">
  <link rel="stylesheet" href="{{ basePath }}/css/variables.css" id="preview-variables-css" data-preview-asset="page-preview" media="all">
  <link
    rel="stylesheet"
    href="{{ basePath }}/css{{ namespaceSegment }}/namespace-tokens.css?v={{ namespaceTokensQuery }}"
    data-default-href="{{ basePath }}/css/namespace-tokens.css?v={{ namespaceTokensQuery }}"
    id="preview-namespace-tokens-css"
    data-preview-asset="page-preview"
    media="all"
    onerror="if (this.dataset && this.dataset.defaultHref) { this.onerror = null; this.href = this.dataset.defaultHref; }"
  >
  <link rel="stylesheet" href="{{ basePath }}/css/table.css" id="preview-table-css" data-preview-asset="page-preview" media="all">
  <link rel="stylesheet" href="{{ basePath }}/css/topbar.css" id="preview-topbar-css" data-preview-asset="page-preview" media="all">
  <script src="https://cdn.jsdelivr.net/npm/dompurify@3/dist/purify.min.js"></script>
  <script>
    window.profileVars = {
      NAME: {{ tenant.imprint_name|default('')|json_encode|raw }},
      STREET: {{ tenant.imprint_street|default('')|json_encode|raw }},
      ZIP: {{ tenant.imprint_zip|default('')|json_encode|raw }},
      CITY: {{ tenant.imprint_city|default('')|json_encode|raw }},
      EMAIL: {{ tenant.imprint_email|default('')|json_encode|raw }}
    };
  </script>
  <script>
    window.csrfToken = '{{ csrf_token|e('js') }}';
  </script>
  <script>
    window.transPageAction = '{{ t('action_page_transfer')|e('js') }}';
    window.transPageTransferTitle = '{{ t('heading_page_transfer')|e('js') }}';
    window.transPageTransferActionLabel = '{{ t('label_page_transfer_action')|e('js') }}';
    window.transPageTransferNamespaceLabel = '{{ t('label_page_transfer_namespace')|e('js') }}';
    window.transPageTransferCopy = '{{ t('option_page_transfer_copy')|e('js') }}';
    window.transPageTransferMove = '{{ t('option_page_transfer_move')|e('js') }}';
    window.transPageTransferSubmit = '{{ t('button_page_transfer_submit')|e('js') }}';
    window.transPageTransferSelectionError = '{{ t('error_page_transfer_selection')|e('js') }}';
    window.transPageTransferSameNamespace = '{{ t('error_page_transfer_namespace_same')|e('js') }}';
    window.transPageTransferNoTargets = '{{ t('text_page_transfer_no_targets')|e('js') }}';
    window.transPageCopied = '{{ t('notify_page_copied')|e('js') }}';
    window.transPageMoved = '{{ t('notify_page_moved')|e('js') }}';
    window.transPageTransferError = '{{ t('notify_page_transfer_error')|e('js') }}';
    window.transAiPageMissingFields = '{{ t('error_ai_page_missing_fields')|e('js') }}';
    window.transAiPageCreateError = '{{ t('error_ai_page_create')|e('js') }}';
    window.transAiPageUnavailable = '{{ t('error_ai_page_unavailable')|e('js') }}';
    window.transAiPagePromptMissing = '{{ t('error_ai_page_prompt_missing')|e('js') }}';
    window.transAiPagePromptInvalid = '{{ t('error_ai_page_prompt_invalid')|e('js') }}';
    window.transAiPageEmptyResponse = '{{ t('error_ai_page_empty_response')|e('js') }}';
    window.transAiPageInvalidHtml = '{{ t('error_ai_page_invalid_html')|e('js') }}';
    window.transAiPageTimeout = '{{ t('error_ai_page_timeout')|e('js') }}';
    window.transAiPageCreated = '{{ t('notify_ai_page_created')|e('js') }}';
  </script>
  <script>
    window.pageEditorMode = 'blocks';
  </script>
  <script>
    window.pageAppearance = {{ appearance|default({})|json_encode(constant('JSON_UNESCAPED_SLASHES') b-or constant('JSON_HEX_TAG') b-or constant('JSON_HEX_APOS') b-or constant('JSON_HEX_AMP') b-or constant('JSON_HEX_QUOT'))|raw }};
  </script>
  <script>
    window.pageDesignConfig = {{ design.config|default({})|json_encode(constant('JSON_UNESCAPED_SLASHES') b-or constant('JSON_HEX_TAG') b-or constant('JSON_HEX_APOS') b-or constant('JSON_HEX_AMP') b-or constant('JSON_HEX_QUOT'))|raw }};
  </script>
  <script type="module" src="{{ basePath }}/js/tiptap-pages.js"></script>
{% endblock %}

{% block body_class %}uk-background-muted uk-padding admin-page{% endblock %}

{% block body %}
  {% embed 'topbar.twig' %}
    {% block left %}
      <button
        id="sidebarToggle"
        type="button"
        class="uk-navbar-toggle uk-visible@m uk-margin-small-right git-btn"
        aria-controls="adminSidebar"
        aria-expanded="true"
        aria-pressed="false"
        aria-label="{{ t('menu') }}"
      >
        <span uk-navbar-toggle-icon></span>
      </button>
      <a href="{{ basePath }}/admin/dashboard" class="uk-navbar-item uk-logo uk-margin-small-left uk-visible@s">
        QuizRace Admin
      </a>
    {% endblock %}
    {% block center %}
      {% include 'admin/components/namespace_breadcrumb.twig' %}
    {% endblock %}
    {% block offcanvas %}
      <div id="qr-offcanvas" uk-offcanvas="overlay: true">
        <div class="uk-offcanvas-bar">
          <button class="uk-offcanvas-close" type="button" uk-close aria-label="{{ t('menu') }}"></button>
          <h3 class="uk-margin-small">QuizRace</h3>
          {% include 'admin/_nav.twig' %}
        </div>
      </div>
    {% endblock %}
  {% endembed %}

  <div class="uk-grid-collapse" uk-grid>
    <aside id="adminSidebar" class="uk-width-1-4@m uk-width-1-5@l uk-visible@m qr-sidebar">
      <div class="uk-card qr-card uk-card-body qr-sidebar-card">
        {% include 'admin/_nav.twig' %}
      </div>
    </aside>
    <main class="uk-width-expand uk-padding-small@xs uk-padding">
      <div class="uk-container uk-container-large">
        <h1 class="uk-heading-bullet">{{ t('heading_pages') }}</h1>
        <p class="uk-text-meta uk-margin-small-top">
          Seiten nutzen die Design-Defaults ihres Namespace. Overrides sind optional und werden nur explizit gespeichert.
          {% if designUsedDefaults|default(false) %}
            Aktuell sind keine Overrides gesetzt.
          {% endif %}
        </p>
      </div>
      <div class="uk-container uk-container-large">
        {% set activePageNamespace = pageNamespace|default('default') %}
        {% set pageNamespaceOptions = available_namespaces|default([]) %}
        {% set hasDomainNamespace = hasDomainNamespace is defined
          ? hasDomainNamespace
          : domainNamespace is defined and domainNamespace is not empty %}
        {% if pageNamespaceOptions is empty %}
          {% set pageNamespaceOptions = [{
            namespace: activePageNamespace,
            label: null,
            is_active: true
          }] %}
        {% endif %}
        <div class="uk-card uk-card-default uk-card-body uk-margin-small">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-1-1 uk-width-expand@m">
              <label class="uk-form-label" for="pageNamespaceSelect">{{ t('label_project_namespace') }}</label>
              <div class="uk-form-controls">
                <select
                  id="pageNamespaceSelect"
                  class="uk-select"
                  data-page-namespace="{{ activePageNamespace|e('html_attr') }}"
                >
                  {% for entry in pageNamespaceOptions %}
                    {% set entryNamespace = entry.namespace|default('') %}
                    {% set entryLabel = entry.label|default('') %}
                    {% set entryIsInactive = entry.is_active is defined and not entry.is_active %}
                    <option
                      value="{{ entryNamespace|e('html_attr') }}"
                      {% if entryNamespace == activePageNamespace %}selected{% endif %}
                    >
                      {{ entryNamespace }}
                      {% if entryLabel is not empty %} – {{ entryLabel }}{% endif %}
                      {% if entryIsInactive %} – inaktiv{% endif %}
                    </option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="uk-width-auto uk-text-meta uk-margin-small-top uk-margin-remove-top@m">
              Wechsel lädt die Inhalte des ausgewählten Namespace neu.
            </div>
          </div>
        </div>


        {% set pagesList = pages|default([]) %}
        {% set hasPages = pagesList is not empty %}
        {% set selectedSlug = selectedPageSlug|default('') %}
        {% if selectedSlug == '' and hasPages %}
          {% set selectedSlug = (pagesList|first).slug %}
        {% endif %}
        {% include 'admin/components/page_tree.twig' %}

        {% set excludedLandingSlugs = ['impressum', 'datenschutz', 'faq', 'lizenz'] %}
        <label class="uk-form-label" for="pageContentSelect">Marketing-Seite</label>
        <div class="uk-flex uk-flex-bottom uk-margin-small-bottom uk-flex-wrap">
          <div class="uk-width-1-1 uk-width-expand@m uk-margin-small-bottom uk-margin-remove-bottom@m">
            <div class="uk-form-controls">
              <select
                id="pageContentSelect"
                class="uk-select"
                data-selected="{{ selectedSlug }}"
                data-excluded-landing="{{ excludedLandingSlugs|join(',') }}"
                {% if not hasPages %}disabled{% endif %}
              >
                {% if not hasPages %}
                  <option value="" selected>Keine Marketing-Seiten vorhanden</option>
                {% endif %}
                  {% for page in pagesList %}
                    {% set pageLabel = page.title is not empty ? page.title : page.slug|replace({'-': ' '})|title %}
                    <option
                      value="{{ page.slug }}"
                      data-page-id="{{ page.id }}"
                      data-startpage="{{ page.id == startpage_page_id ? '1' : '0' }}"
                      {% if page.slug == selectedSlug %}selected{% endif %}
                    >{{ pageLabel }}</option>
                  {% endfor %}
              </select>
            </div>
          </div>
          <div class="uk-margin-small-left">
            <button
              class="uk-button uk-button-default"
              type="button"
              uk-toggle="target: #createPageModal"
            >Neue Seite</button>
          </div>
          <div class="uk-margin-small-left">
            <button
              class="uk-button uk-button-primary"
              type="button"
              uk-toggle="target: #aiPageModal"
            >{{ t('action_ai_page_create') }}</button>
          </div>
        </div>
        <div
          class="uk-card uk-card-default uk-card-body uk-margin-small"
          data-page-namespace-manager
          data-startpage-page-id="{{ startpage_page_id|default('') }}"
          data-startpage-map='{{ startpage_map|default({})|json_encode|e('html_attr') }}'
          data-selected-domain="{{ startpage_selected_domain|default('')|e('html_attr') }}"
        >
          <label class="uk-form-label" for="startpageToggle">Startseite dieses Projekts</label>
          {% if not hasDomainNamespace %}
            <div class="uk-alert uk-alert-warning uk-margin-small-top" role="alert">
              Dieser Bereich ist deaktiviert, weil kein Domain-Namespace erkannt wurde.
            </div>
          {% endif %}
          <div class="uk-margin-small-top">
            <label class="uk-form-label" for="startpageDomainSelect">Domain</label>
            <div class="uk-form-controls">
              <select id="startpageDomainSelect" class="uk-select" data-startpage-domain {% if not hasDomainNamespace %}disabled{% endif %}>
                {% for domain in startpage_domain_options|default([]) %}
                  {% set value = domain.value|default('') %}
                  {% set label = domain.label|default(value) %}
                  {% set inactive = domain.is_active is defined and not domain.is_active %}
                  {% set unassigned = domain.is_unassigned is defined and domain.is_unassigned %}
                  <option value="{{ value|e('html_attr') }}" {% if value == startpage_selected_domain %}selected{% endif %}>
                    {{ label }}
                    {% if inactive %} – inaktiv{% endif %}
                    {% if unassigned %} – nicht zugewiesen{% endif %}
                  </option>
                {% endfor %}
              </select>
            </div>
            <p class="uk-text-meta uk-margin-small-top">
              Wähle die Domain, für die diese Startseite gelten soll. Der Namespace-Fallback gilt für alle Domains ohne eigene Startseite.
            </p>
          </div>
          <div class="uk-form-controls uk-margin-small-top">
            <label class="uk-flex uk-flex-middle uk-flex-wrap">
              <input
                id="startpageToggle"
                class="uk-checkbox"
                type="checkbox"
                data-startpage-toggle
                data-startpage-disabled="{{ hasDomainNamespace ? '0' : '1' }}"
                {% if not hasDomainNamespace %}disabled{% endif %}
              >
              <span class="uk-margin-small-left uk-text-meta">Bestimmt, welche Marketing-Seite beim Aufruf des Projekts zuerst geladen wird.</span>
            </label>
          </div>
        </div>
        {% set pageTypeDefaultsList = pageTypeDefaults|default([]) %}
        {% set hasPageTypes = pageTypeDefaultsList is not empty %}
        <div class="uk-card uk-card-default uk-card-body uk-margin-small">
          <h3 class="uk-margin-remove-top">Page Types</h3>
          <p class="uk-text-meta">
            Definiere Standardwerte für Layout und Hintergrund je Page-Type. Diese Defaults steuern die Vorschau und
            das Rendering der Marketing-Seiten. Den Akzent (Intent) setzt du pro Block im Editor.
          </p>
          {% if pageTypeFlash is defined and pageTypeFlash %}
            <div class="uk-alert-{{ pageTypeFlash.type == 'success' ? 'success' : 'danger' }} uk-margin-small" uk-alert>
              {{ pageTypeFlash.message|default('') }}
            </div>
          {% endif %}
          {% set layoutLabels = { normal: 'Normal', full: 'Fullwidth', card: 'Card' } %}
          {% set backgroundLabels = { surface: 'Surface', muted: 'Muted', primary: 'Primary', secondary: 'Secondary', accent: 'Accent' } %}
          <form
            class="uk-form-stacked"
            method="post"
            action="{{ basePath }}/admin/pages/page-types"
            data-page-types-form
            data-page-type-index="{{ pageTypeDefaultsList|length }}"
          >
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            <input type="hidden" name="namespace" value="{{ pageNamespace|e('html_attr') }}">
            <div data-page-type-list>
              <div class="uk-alert uk-alert-warning" data-page-type-empty {% if hasPageTypes %}hidden{% endif %}>
                Noch keine Page Types definiert.
              </div>
              {% for entry in pageTypeDefaultsList %}
                {% set sectionDefaults = entry.sectionStyleDefaults|default({}) %}
                {% set backgroundDefaults = sectionDefaults.background|default({}) %}
                {% set backgroundSelection = '' %}
                {% if backgroundDefaults.mode|default('') == 'none' %}
                  {% set backgroundSelection = 'none' %}
                {% elseif backgroundDefaults.mode|default('') == 'color' and backgroundDefaults.colorToken is defined %}
                  {% set backgroundSelection = backgroundDefaults.colorToken %}
                {% endif %}
                <div class="uk-card uk-card-muted uk-card-body uk-margin-small" data-page-type-row>
                  <div class="uk-grid-small uk-flex-middle" uk-grid>
                    <div class="uk-width-1-1 uk-width-1-4@m">
                      <label class="uk-form-label" for="pageTypeName-{{ loop.index0 }}">Page Type</label>
                      <div class="uk-form-controls">
                        <input
                          id="pageTypeName-{{ loop.index0 }}"
                          class="uk-input"
                          type="text"
                          name="pageTypes[{{ loop.index0 }}][type]"
                          value="{{ entry.type|e('html_attr') }}"
                          required
                        >
                      </div>
                    </div>
                    <div class="uk-width-1-2 uk-width-1-3@m">
                      <label class="uk-form-label" for="pageTypeLayout-{{ loop.index0 }}">Layout-Default</label>
                      <div class="uk-form-controls">
                        <select id="pageTypeLayout-{{ loop.index0 }}" class="uk-select" name="pageTypes[{{ loop.index0 }}][layout]">
                          <option value="">Standard</option>
                          {% for layout in pageTypeLayoutOptions|default([]) %}
                            <option value="{{ layout }}" {% if sectionDefaults.layout|default('') == layout %}selected{% endif %}>
                              {{ layoutLabels[layout]|default(layout) }}
                            </option>
                          {% endfor %}
                        </select>
                      </div>
                    </div>
                    <div class="uk-width-1-2 uk-width-1-3@m">
                      <label class="uk-form-label" for="pageTypeBackground-{{ loop.index0 }}">Hintergrund-Token</label>
                      <div class="uk-form-controls">
                        <select
                          id="pageTypeBackground-{{ loop.index0 }}"
                          class="uk-select"
                          name="pageTypes[{{ loop.index0 }}][backgroundToken]"
                        >
                          <option value="">Standard</option>
                          <option value="none" {% if backgroundSelection == 'none' %}selected{% endif %}>Kein Hintergrund</option>
                          {% for token in pageTypeBackgroundTokens|default([]) %}
                            <option value="{{ token }}" {% if backgroundSelection == token %}selected{% endif %}>
                              {{ backgroundLabels[token]|default(token) }}
                            </option>
                          {% endfor %}
                        </select>
                      </div>
                    </div>
                    <div class="uk-width-auto uk-flex uk-flex-bottom">
                      <button type="button" class="uk-button uk-button-default" data-page-type-remove>Entfernen</button>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="uk-margin-small-top">
              <button type="button" class="uk-button uk-button-default" data-page-type-add>Page Type hinzufügen</button>
              <button type="submit" class="uk-button uk-button-primary uk-margin-small-left">Defaults speichern</button>
            </div>
            <template data-page-type-template>
              <div class="uk-card uk-card-muted uk-card-body uk-margin-small" data-page-type-row>
                <div class="uk-grid-small uk-flex-middle" uk-grid>
                  <div class="uk-width-1-1 uk-width-1-4@m">
                    <label class="uk-form-label" for="pageTypeName-__INDEX__">Page Type</label>
                    <div class="uk-form-controls">
                      <input
                        id="pageTypeName-__INDEX__"
                        class="uk-input"
                        type="text"
                        name="pageTypes[__INDEX__][type]"
                        required
                      >
                    </div>
                  </div>
                  <div class="uk-width-1-2 uk-width-1-3@m">
                    <label class="uk-form-label" for="pageTypeLayout-__INDEX__">Layout-Default</label>
                    <div class="uk-form-controls">
                      <select id="pageTypeLayout-__INDEX__" class="uk-select" name="pageTypes[__INDEX__][layout]">
                        <option value="">Standard</option>
                        {% for layout in pageTypeLayoutOptions|default([]) %}
                          <option value="{{ layout }}">{{ layoutLabels[layout]|default(layout) }}</option>
                        {% endfor %}
                      </select>
                    </div>
                  </div>
                  <div class="uk-width-1-2 uk-width-1-3@m">
                    <label class="uk-form-label" for="pageTypeBackground-__INDEX__">Hintergrund-Token</label>
                    <div class="uk-form-controls">
                      <select id="pageTypeBackground-__INDEX__" class="uk-select" name="pageTypes[__INDEX__][backgroundToken]">
                        <option value="">Standard</option>
                        <option value="none">Kein Hintergrund</option>
                        {% for token in pageTypeBackgroundTokens|default([]) %}
                          <option value="{{ token }}">{{ backgroundLabels[token]|default(token) }}</option>
                        {% endfor %}
                      </select>
                    </div>
                  </div>
                  <div class="uk-width-auto uk-flex uk-flex-bottom">
                    <button type="button" class="uk-button uk-button-default" data-page-type-remove>Entfernen</button>
                  </div>
                </div>
              </div>
            </template>
          </form>
        </div>
        <div id="pageFormsContainer">
          {% if pagesList is empty %}
            <div class="uk-alert uk-alert-warning pages-empty-alert">{{ t('text_no_marketing_pages') }}</div>
          {% endif %}
          {% for page in pagesList %}
          <form
            class="page-form{% if page.slug != selectedSlug %} uk-hidden{% endif %}"
            data-slug="{{ page.slug }}"
            data-landing="{{ page.slug not in excludedLandingSlugs ? 'true' : 'false' }}"
            data-page-id="{{ page.id }}"
            data-page-type="{{ page.type|default('')|e('html_attr') }}"
          >
            <input type="hidden" id="page_{{ page.slug }}" name="content" value="{{ page.content|e('html_attr') }}">
            <div class="page-editor" data-content="{{ page.content|e('html_attr') }}"></div>
            <div class="uk-margin-top" data-editor-actions="true">
              <button class="uk-button uk-button-primary save-page-btn" type="button">Speichern</button>
              <button class="uk-button uk-button-default uk-margin-small-left preview-link" type="button">Vorschau</button>
              <button class="uk-button uk-button-default uk-margin-small-left export-page-btn" type="button">
                Export Page as JSON
              </button>
              {% set importInputId = 'pageImportInput-' ~ page.slug %}
              <label class="uk-button uk-button-default uk-margin-small-left import-page-btn" for="{{ importInputId|e('html_attr') }}">
                Import Page from JSON
              </label>
              <input
                id="{{ importInputId|e('html_attr') }}"
                class="page-import-input"
                type="file"
                accept="application/json,.json,.page.json"
                style="position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0, 0, 0, 0); border: 0;"
              >
              <span class="uk-text-meta" data-page-import-feedback></span>
              <button class="uk-button uk-button-danger uk-margin-small-left delete-page-btn" type="button">{{ t('action_delete') }}</button>
            </div>
          </form>
          {% endfor %}
        </div>
        <div id="preview-modal" uk-modal>
          <div class="uk-modal-dialog uk-modal-body">
            <h3>Vorschau</h3>
            <div id="preview-content" data-namespace="{{ pageNamespace|e('html_attr') }}"></div>
            <button class="uk-button uk-button-default uk-modal-close" type="button">Schließen</button>
          </div>
        </div>
        <div id="createPageModal" uk-modal>
          <div class="uk-modal-dialog uk-modal-body">
            <h2 class="uk-modal-title">Neue Seite anlegen</h2>
            <form id="createPageForm" class="uk-form-stacked">
              <div id="createPageFeedback" class="uk-alert uk-alert-danger" hidden></div>
              <div class="uk-margin">
                <label class="uk-form-label" for="newPageSlug">Slug</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="newPageSlug" name="slug" type="text" required maxlength="100" placeholder="z. B. neue-landingpage">
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="newPageTitle">Titel</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="newPageTitle" name="title" type="text" required placeholder="Seitentitel">
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="newPageContent">Initiales HTML (optional)</label>
                <div class="uk-form-controls">
                  <textarea class="uk-textarea" id="newPageContent" name="content" rows="6" placeholder="&lt;section class=&quot;uk-section&quot;&gt;...&lt;/section&gt;"></textarea>
                </div>
              </div>
              <div class="uk-flex uk-flex-right">
                <button type="submit" class="uk-button uk-button-primary">Seite erstellen</button>
                <button type="button" class="uk-button uk-button-default uk-margin-small-left uk-modal-close">Abbrechen</button>
              </div>
            </form>
          </div>
        </div>
        <div id="aiPageModal" uk-modal>
          <div class="uk-modal-dialog uk-modal-body">
            <h2 class="uk-modal-title">{{ t('heading_ai_page_create') }}</h2>
            <form id="aiPageForm" class="uk-form-stacked">
              <div class="uk-alert uk-alert-danger" data-ai-page-feedback hidden role="alert"></div>
              <div class="uk-margin">
                <label class="uk-form-label" for="aiPageTheme">{{ t('label_ai_page_theme') }}</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="aiPageTheme" name="theme" type="text" required placeholder="{{ t('placeholder_ai_page_theme') }}">
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="aiPageColorScheme">{{ t('label_ai_page_color_scheme') }}</label>
                <div class="uk-form-controls">
                  <input
                    class="uk-input"
                    id="aiPageColorScheme"
                    name="color_scheme"
                    type="text"
                    required
                    placeholder="{{ t('placeholder_ai_page_color_scheme') }}"
                  >
                </div>
              </div>
              <div class="uk-margin">
                <div class="uk-form-label">{{ t('label_ai_page_color_tokens') }}</div>
                <div class="uk-text-meta uk-margin-small-bottom">{{ t('text_ai_page_color_tokens_hint') }}</div>
                <div class="uk-grid uk-grid-small uk-child-width-1-3@m" uk-grid>
                  <div>
                    <label class="uk-form-label" for="aiPagePrimaryColor">{{ t('label_ai_page_primary_color') }}</label>
                    <div class="uk-form-controls uk-flex uk-flex-middle uk-grid-small" uk-grid>
                      <div class="uk-width-auto">
                        <input
                          class="uk-input uk-form-width-small"
                          id="aiPagePrimaryColor"
                          name="primary_color"
                          type="color"
                          value="#1e87f0"
                          data-default="#1e87f0"
                        >
                      </div>
                      <div class="uk-width-expand">
                        <div class="uk-text-meta" data-ai-color-value="aiPagePrimaryColor">#1e87f0</div>
                      </div>
                    </div>
                  </div>
                  <div>
                    <label class="uk-form-label" for="aiPageBackgroundColor">{{ t('label_ai_page_background_color') }}</label>
                    <div class="uk-form-controls uk-flex uk-flex-middle uk-grid-small" uk-grid>
                      <div class="uk-width-auto">
                        <input
                          class="uk-input uk-form-width-small"
                          id="aiPageBackgroundColor"
                          name="background_color"
                          type="color"
                          value="#0f172a"
                          data-default="#0f172a"
                        >
                      </div>
                      <div class="uk-width-expand">
                        <div class="uk-text-meta" data-ai-color-value="aiPageBackgroundColor">#0f172a</div>
                      </div>
                    </div>
                  </div>
                  <div>
                    <label class="uk-form-label" for="aiPageAccentColor">{{ t('label_ai_page_accent_color') }}</label>
                    <div class="uk-form-controls uk-flex uk-flex-middle uk-grid-small" uk-grid>
                      <div class="uk-width-auto">
                        <input
                          class="uk-input uk-form-width-small"
                          id="aiPageAccentColor"
                          name="accent_color"
                          type="color"
                          value="#f59e0b"
                          data-default="#f59e0b"
                        >
                      </div>
                      <div class="uk-width-expand">
                        <div class="uk-text-meta" data-ai-color-value="aiPageAccentColor">#f59e0b</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="aiPageProblem">{{ t('label_ai_page_problem') }}</label>
                <div class="uk-form-controls">
                  <textarea
                    class="uk-textarea"
                    id="aiPageProblem"
                    name="problem"
                    rows="5"
                    required
                    placeholder="{{ t('placeholder_ai_page_problem') }}"
                  ></textarea>
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="aiPagePromptTemplate">{{ t('label_ai_page_prompt_template') }}</label>
                <div class="uk-form-controls">
                  <select class="uk-select" id="aiPagePromptTemplate" name="prompt_template_id">
                    <option value="">{{ t('placeholder_ai_page_prompt_template') }}</option>
                    {% for template in prompt_templates|default([]) %}
                      {% set templateId = template.id|default('') %}
                      {% set templateLabel = template.label|default('') %}
                      {% if templateId is not empty and templateLabel is not empty %}
                        <option value="{{ templateId|e('html_attr') }}">{{ templateLabel }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="aiPageSlug">{{ t('label_ai_page_slug') }}</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="aiPageSlug" name="slug" type="text" required maxlength="100" placeholder="{{ t('placeholder_ai_page_slug') }}">
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="aiPageTitle">{{ t('label_ai_page_title') }}</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="aiPageTitle" name="title" type="text" required placeholder="{{ t('placeholder_ai_page_title') }}">
                </div>
              </div>
              <div class="uk-margin">
                <div class="uk-form-controls">
                  <label>
                    <input class="uk-checkbox" id="aiPageCreateMenuItem" name="create_menu_item" type="checkbox">
                    Menüpunkt erstellen
                  </label>
                </div>
              </div>
              <div class="uk-margin" data-ai-page-menu-label hidden>
                <label class="uk-form-label" for="aiPageMenuLabel">Menü-Titel (optional)</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="aiPageMenuLabel" name="menu_label" type="text" placeholder="Standard: Seitentitel">
                </div>
              </div>
              <div class="uk-flex uk-flex-right">
                <button type="submit" class="uk-button uk-button-primary">{{ t('action_ai_page_create') }}</button>
                <button type="button" class="uk-button uk-button-default uk-margin-small-left uk-modal-close">{{ t('button_cancel') }}</button>
              </div>
            </form>
          </div>
        </div>
        <div id="pageTransferModal" uk-modal>
          <div class="uk-modal-dialog uk-modal-body">
            <h2 class="uk-modal-title">{{ t('heading_page_transfer') }}</h2>
            <form id="pageTransferForm" class="uk-form-stacked">
              <input type="hidden" id="pageTransferSlug" name="slug" value="">
              <div class="uk-text-meta uk-margin-small-bottom" data-page-transfer-title></div>
              {% if not hasPages %}
                <div class="uk-alert uk-alert-warning uk-margin-small-bottom">
                  Keine Seiten im Namespace.
                </div>
              {% endif %}
              <div class="uk-alert uk-alert-danger" data-page-transfer-feedback hidden></div>
              <div class="uk-margin">
                <label class="uk-form-label" for="pageTransferAction">{{ t('label_page_transfer_action') }}</label>
                <div class="uk-form-controls">
                  <select id="pageTransferAction" class="uk-select" required>
                    <option value="">{{ t('placeholder_select_action') }}</option>
                    <option value="copy">{{ t('option_page_transfer_copy') }}</option>
                    <option value="move">{{ t('option_page_transfer_move') }}</option>
                  </select>
                </div>
              </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="pageTransferNamespace">{{ t('label_page_transfer_namespace') }}</label>
                <div class="uk-form-controls">
                  <select id="pageTransferNamespace" class="uk-select" required>
                    <option value="">{{ t('placeholder_select_namespace') }}</option>
                    {% set transferTargets = available_namespaces|default([]) %}
                    {% if transferTargets is empty %}
                      {% set transferTargets = [{
                        namespace: activePageNamespace,
                        label: null,
                        is_active: true
                      }] %}
                    {% endif %}
                    {% for entry in transferTargets %}
                      {% set entryNamespace = entry.namespace|default('') %}
                      {% set entryLabel = entry.label|default('') %}
                      {% if entryNamespace and entryNamespace != activePageNamespace %}
                        <option value="{{ entryNamespace|e('html_attr') }}">
                          {{ entryNamespace }}
                          {% if entryLabel is not empty %} – {{ entryLabel }}{% endif %}
                        </option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="uk-flex uk-flex-right">
                <button
                  type="submit"
                  class="uk-button uk-button-primary"
                  data-page-transfer-submit
                  {% if not hasPages %}disabled{% endif %}
                >
                  {{ t('button_page_transfer_submit') }}
                </button>
                <button type="button" class="uk-button uk-button-default uk-margin-small-left uk-modal-close">
                  {{ t('action_cancel') }}
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% block scripts %}
  <script type="module" src="{{ basePath }}/js/admin.js"></script>
{% endblock %}
