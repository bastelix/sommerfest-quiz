{% extends 'emails/layout.twig' %}

{% block content %}
<p>Kontaktanfrage von {{ name }} ({{ email }}):</p>
{% if company %}
<p>Unternehmen: {{ company }}</p>
{% endif %}
{% for field in extra_fields|default([]) %}
<p><strong>{{ field.label }}:</strong> {{ field.value }}</p>
{% endfor %}
<p>{{ message|nl2br }}</p>
{% endblock %}
