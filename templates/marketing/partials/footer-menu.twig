{% macro render_links(items) %}
  <ul>
    {% for link in items %}
      {% set href = link.href|default('#') %}
      {% set isExternal = link.isExternal|default(false) %}
      <li>
        <a href="{{ href }}"{% if isExternal %} target="_blank" rel="noopener"{% endif %}>{{ link.label }}</a>
      </li>
    {% endfor %}
  </ul>
{% endmacro %}

{% macro render_columns(columns, containerClass, columnClass, containerAttr) %}
  {% import _self as footerMenu %}
  {% set columns = columns|default([]) %}
  <div class="{{ containerClass }}"{% if containerAttr %} {{ containerAttr|raw }}{% endif %}>
    {% for column in columns %}
      <div class="{{ columnClass }}">
        {{ footerMenu.render_links(column.items|default([])) }}
      </div>
    {% endfor %}
  </div>
{% endmacro %}
