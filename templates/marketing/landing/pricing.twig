<!-- ===== Pricing ===== -->
<section id="pricing" class="uk-section section section--plain">
  <div class="uk-container container-xl">
    <h2 class="uk-text-center uk-heading-medium">Abomodelle für jedes Event</h2>
    <p class="uk-text-center uk-text-lead uk-margin-small">7 Tage kostenlos testen – fair & transparent.</p>

    <div class="uk-text-center uk-margin">
      <span class="uk-margin-small-right">Monat</span>
      <label class="uk-switch">
        <input type="checkbox" id="billing-toggle" aria-label="Jährliche Abrechnung aktivieren">
        <div class="uk-switch-slider"></div>
      </label>
      <span class="uk-margin-small-left">Jahr <span class="uk-badge">-15&nbsp;%</span></span>
      <div id="billing-note" class="uk-text-meta uk-margin-small-top" aria-live="polite"></div>
    </div>

    <div class="uk-grid-large uk-child-width-1-3@m uk-grid-match" uk-grid>
      <div>
        <div class="uk-card uk-card-quizrace uk-text-center uk-padding">
          <h3 class="uk-card-title uk-text-primary uk-margin-small">Starter</h3>
          <div class="uk-text-xxlarge uk-text-bold price" data-monthly="9 €/Monat" data-yearly="92 €/Jahr">9 €/Monat</div>
          <ul class="uk-list uk-text-left uk-margin">
            <li><b>1 Event</b> gleichzeitig</li>
            <li>5 Teams · 5 Kataloge à 5</li>
            <li>Live-Ranking · Basis-PDF</li>
          </ul>
          <a href="{{ basePath }}/onboarding" class="uk-button uk-button-default uk-width-1-1">Jetzt starten</a>
        </div>
      </div>

      <div>
        <div class="uk-card uk-card-popular uk-text-center uk-padding uk-light">
          <span class="uk-label">Meist gewählt</span>
          <h3 class="uk-card-title uk-margin-small">Standard</h3>
          <div class="uk-text-xxlarge uk-text-bold price" data-monthly="39 €/Monat" data-yearly="398 €/Jahr">39 €/Monat</div>
          <ul class="uk-list uk-text-left uk-margin">
            <li><b>bis 3</b> Events gleichzeitig</li>
            <li>10 Teams · 10 Kataloge à 10</li>
            <li>Eigene Subdomain · Voll-PDF</li>
          </ul>
          <a href="{{ basePath }}/onboarding" class="uk-button uk-button-secondary uk-width-1-1">Jetzt upgraden</a>
        </div>
      </div>

      <div>
        <div class="uk-card uk-card-quizrace uk-text-center uk-padding">
          <h3 class="uk-card-title uk-text-primary uk-margin-small">Professional</h3>
          <div class="uk-text-xxlarge uk-text-bold price" data-monthly="79 €/Monat" data-yearly="806 €/Jahr">79 €/Monat</div>
          <ul class="uk-list uk-text-left uk-margin">
            <li><b>20+</b> Events gleichzeitig</li>
            <li>100 Teams · 50 Kataloge à 50</li>
            <li>White-Label · Rollen</li>
          </ul>
          <a href="{{ basePath }}/onboarding" class="uk-button uk-button-default uk-width-1-1">Beratung anfragen</a>
        </div>
      </div>
    </div>

    <p class="uk-text-meta uk-text-center uk-margin-large-top">Alle Preise zzgl. MwSt.</p>
  </div>
</section>
