{% block scripts %}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Nav scroll effect
      var nav = document.getElementById('chl-nav');
      if (nav) {
        window.addEventListener('scroll', function () {
          nav.classList.toggle('scrolled', window.scrollY > 20);
        }, { passive: true });
      }

      // Mobile menu
      var hamburger = document.getElementById('chlHamburger');
      var navLinks = document.getElementById('chlNavLinks');
      if (hamburger && navLinks) {
        hamburger.addEventListener('click', function () {
          navLinks.classList.toggle('open');
        });
      }

      // Fade-in on scroll
      var observer = new IntersectionObserver(function (entries) {
        entries.forEach(function (e) {
          if (e.isIntersecting) { e.target.classList.add('visible'); }
        });
      }, { threshold: 0.1 });
      document.querySelectorAll('.chl-fade-in').forEach(function (el) {
        observer.observe(el);
      });

      // Email link decoding
      document.querySelectorAll('.js-email-link').forEach(function (anchor) {
        var user = anchor.getAttribute('data-user');
        var domain = anchor.getAttribute('data-domain');
        if (user && domain) {
          var email = user + '@' + domain;
          anchor.href = 'mailto:' + email;
          anchor.textContent = email;
        }
      });

      // Form handler (placeholder)
      document.querySelectorAll('[data-chl-form]').forEach(function (form) {
        form.addEventListener('submit', function (e) {
          e.preventDefault();
          var btn = form.querySelector('button[type="submit"]');
          if (!btn) { return; }
          var originalText = btn.textContent;
          btn.textContent = '\u2713 Wird verarbeitet...';
          btn.style.background = '#6BCB77';
          setTimeout(function () {
            btn.textContent = '\u2713 Willkommen!';
            // TODO: integrate with newsletter tool (e.g. Mailchimp, Brevo)
          }, 1500);
        });
      });
    });
  </script>
