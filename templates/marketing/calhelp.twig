{% extends 'layout.twig' %}

{% set links = [
  { 'href': '#hero', 'label': 'Start', 'icon': 'home' },
  { 'href': '#trust', 'label': 'Vertrauen', 'icon': 'lock' },
  { 'href': '#kennzahlen', 'label': 'Kennzahlen', 'icon': 'thumbnails' },
  { 'href': '#situationen', 'label': 'Situationen', 'icon': 'info' },
  { 'href': '#stories', 'label': 'Praxis', 'icon': 'users' },
  { 'href': '#wirkung', 'label': 'Wirkung', 'icon': 'grid' },
  { 'href': '#prozess', 'label': 'Prozess', 'icon': 'clock' },
  { 'href': '#framework', 'label': 'Framework', 'icon': 'cog' },
  { 'href': '#zielgruppen', 'label': 'Zielgruppen', 'icon': 'world' },
  { 'href': '#news', 'label': 'News', 'icon': 'rss' },
  { 'href': '#faq', 'label': 'FAQ', 'icon': 'question' },
  { 'href': '#cta', 'label': 'Kontakt', 'icon': 'bolt' }
] %}
{% if marketingWikiMenu is defined %}
  {% set links = links|merge([{ 'href': marketingWikiMenu.url, 'label': marketingWikiMenu.label, 'icon': 'file-text' }]) %}
{% endif %}

{% block title %}{{ metaTitle|default('calHelp – Ein System. Klare Prozesse. Beratung für Kalibrier-, Prüf- & Inventarprozesse') }}{% endblock %}

{% block head %}
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="preload" href="{{ basePath }}/css/landing.css" as="style">
  <link rel="stylesheet" href="{{ basePath }}/css/landing.css">
  <link rel="stylesheet" href="{{ basePath }}/css/calserver.css">
  <link rel="stylesheet" href="{{ basePath }}/css/highcontrast.css">
  <link rel="stylesheet" href="{{ basePath }}/css/onboarding.css">
  <link rel="stylesheet" href="{{ basePath }}/css/topbar.landing.css">
  <link rel="stylesheet" href="{{ basePath }}/css/calhelp.css">
  <meta name="page-name" content="calHelp – Marketingseite">
{% endblock %}

{% block body_theme %}light{% endblock %}
{% block body_class %}qr-landing calserver-theme calhelp-theme{% endblock %}

{% block body %}
  <div class="landing-content">
    <header class="qr-topbar">
      <nav class="uk-navbar-container" data-uk-navbar>
        <div class="uk-navbar-left">
          <div class="uk-navbar-item">
            <button id="offcanvas-toggle"
                    class="uk-navbar-toggle uk-hidden@m git-btn"
                    data-uk-navbar-toggle-icon
                    data-uk-toggle="target: #qr-offcanvas"
                    aria-controls="qr-offcanvas"
                    aria-expanded="false"
                    aria-label="Menü"></button>
            <a class="uk-logo cs-logo calhelp-logo" href="{{ basePath }}/calhelp">
              <span class="cs-logo__sr">CalHelp</span>
              <span class="cs-logo__image" aria-hidden="true">
                <img class="cs-logo__img"
                     src="{{ basePath }}/uploads/calserver-logo.webp"
                     alt=""
                     loading="eager"
                     decoding="async">
              </span>
              <span class="cs-logo__wordmark" aria-hidden="true">CalHelp</span>
            </a>
          </div>
        </div>
        <div class="uk-navbar-right">
          <ul class="uk-navbar-nav uk-visible@m calhelp-nav">
            {% for link in links %}
              <li>
                <a href="{{ link.href }}">
                  <span class="uk-margin-small-right" data-uk-icon="icon: {{ link.icon }}"></span>{{ link.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
          <div class="uk-navbar-item config-menu uk-inline">
            <button id="configMenuToggle"
                    type="button"
                    class="uk-button uk-button-default git-btn"
                    aria-label="Konfiguration"
                    aria-expanded="false">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M19.14 12.94a7.5 7.5 0 0 0 .05-.94 7.5 7.5 0 0 0-.05-.94l2.03-1.58a.5.5 0 0 0 .12-.64l-1.92-3.33a.5.5 0 0 0-.6-.22l-2.39.96a7.6 7.6 0 0 0-1.63-.94l-.36-2.54a.5.5 0 0 0-.5-.43h-3.84a.5.5 0 0 0-.5.43l-.36 2.54c-.57.24-1.12.55-1.63.94l-2.39-.96a.5.5 0 0 0-.6.22L2.7 7.84a.5.5 0 0 0 .12.64l2.03 1.58c-.03.31-.05.63-.05.94s.02.63.05.94L2.82 13.5a.5.5 0 0 0-.12.64l1.92 3.33a.5.5 0 0 0 .6.22l2.39-.96c.51.39 1.06.7 1.63.94l.36 2.54a.5.5 0 0 0 .5.43h3.84a.5.5 0 0 0 .5-.43l.36-2.54c.57-.24 1.12-.55 1.63-.94l2.39.96a.5.5 0 0 0 .6-.22l1.92-3.33a.5.5 0 0 0-.12-.64l-2.03-1.58ZM12 15.5A3.5 3.5 0 1 1 12 8.5a3.5 3.5 0 0 1 0 7Z"
                      fill="currentColor"/>
              </svg>
            </button>
            <div id="menuDrop"
                 class="uk-dropdown"
                 hidden
                 data-uk-dropdown="mode: click; pos: bottom-right; flip: false; animation: uk-animation-slide-top-small">
              <ul class="uk-nav uk-dropdown-nav" role="menu">
                <li>
                  <button id="themeToggle"
                          class="uk-button uk-button-default git-btn theme-toggle"
                          aria-label="Design umschalten"
                          role="menuitem">
                    <span id="themeIcon" class="theme-icon" aria-hidden="true"></span>
                  </button>
                </li>
                <li>
                  <button id="accessibilityToggle"
                          class="uk-button uk-button-default git-btn accessibility-toggle"
                          aria-label="Kontrast umschalten"
                          role="menuitem">
                    <span id="accessibilityIcon" class="accessibility-icon" aria-hidden="true"></span>
                  </button>
                </li>
                <li>
                  <div class="uk-inline">
                    <button id="languageMenuToggle"
                            type="button"
                            class="uk-button uk-button-default git-btn"
                            aria-label="{{ t('language_toggle') }}"
                            aria-expanded="false"
                            role="menuitem">
                      <svg viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm6.93 6h-2.54c-.11-1.47-.43-2.87-.92-4.17 1.84.69 3.29 2.1 4.05 3.84zM12 4c.96 1.18 1.62 2.64 1.88 4H10.12c.26-1.36.92-2.82 1.88-4zM4.26 14c-.17-.64-.26-1.31-.26-2s.09-1.36.26-2h3.09c-.07.66-.11 1.32-.11 2s.04 1.34.11 2H4.26zm.81 2h2.54c.11 1.47.43 2.87.92 4.17-1.84-.69-3.29-2.1-4.05-3.84zm2.54-8H5.07c.76-1.74 2.21-3.15 4.05-3.84-.49 1.3-.81 2.7-.92 4.17zM12 20c-.96-1.18-1.62-2.64-1.88-4h3.76c-.26 1.36-.92 2.82-1.88 4zm2.62-6H9.38c-.08-.66-.12-1.32-.12-2s.04-1.34.12-2h5.24c.08.66.12 1.32.12 2s-.04 1.34-.12 2zm.81 6c.49-1.3.81-2.7.92-4.17h2.54c-.76 1.74-2.21 3.15-4.05 3.84zM16.65 14c.07-.66.11-1.32.11-2s-.04-1.34-.11-2h3.09c.17.64.26 1.31.26 2s-.09 1.36-.26 2h-3.09z"
                              fill="currentColor"/>
                      </svg>
                    </button>
                    <div id="languageDrop" class="uk-dropdown" hidden data-uk-dropdown="mode: click; pos: left-top; offset: 0">
                      <ul class="uk-nav uk-dropdown-nav" role="menu">
                        <li>
                          <button class="uk-button uk-button-default git-btn lang-option"
                                  data-lang="de"
                                  role="menuitem">
                            <span class="lang-option__icon" aria-hidden="true">
                              <svg class="lang-option__svg" viewBox="0 0 24 16" role="img" focusable="false">
                                <rect width="24" height="16" fill="#ffce00" />
                                <rect width="24" height="10.6667" fill="#dd0000" />
                                <rect width="24" height="5.3333" fill="#000000" />
                              </svg>
                            </span>
                            <span class="lang-option__label">{{ t('german') }}</span>
                          </button>
                        </li>
                        <li>
                          <button class="uk-button uk-button-default git-btn lang-option"
                                  data-lang="en"
                                  role="menuitem">
                            <span class="lang-option__icon" aria-hidden="true">
                              <svg class="lang-option__svg" viewBox="0 0 24 16" role="img" focusable="false">
                                <rect width="24" height="16" fill="#012169" />
                                <path fill="#ffffff" d="M0 0h3.2L24 13.6V16h-3.2L0 2.4z" />
                                <path fill="#ffffff" d="M24 0h-3.2L0 13.6V16h3.2L24 2.4z" />
                                <path fill="#c8102e" d="M0 0h1.6L24 12.8V16h-1.6L0 3.2z" />
                                <path fill="#c8102e" d="M24 0h-1.6L0 12.8V16h1.6L24 3.2z" />
                                <rect x="10" width="4" height="16" fill="#ffffff" />
                                <rect y="6" width="24" height="4" fill="#ffffff" />
                                <rect x="10.8" width="2.4" height="16" fill="#c8102e" />
                                <rect y="6.8" width="24" height="2.4" fill="#c8102e" />
                              </svg>
                            </span>
                            <span class="lang-option__label">{{ t('english') }}</span>
                          </button>
                        </li>
                      </ul>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <div id="qr-offcanvas" data-uk-offcanvas="overlay: true; flip: true">
      <div class="uk-offcanvas-bar calhelp-offcanvas">
        <button class="uk-offcanvas-close git-btn" type="button" data-uk-close aria-label="Menü schließen"></button>
        <div class="calhelp-offcanvas__inner">
          <ul class="uk-nav uk-nav-default calhelp-offcanvas__nav">
            {% for link in links %}
              <li>
                <a href="{{ link.href }}">
                  <span class="uk-margin-small-right" data-uk-icon="icon: {{ link.icon }}"></span>{{ link.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <a class="uk-button uk-button-primary uk-width-1-1 uk-margin-top calhelp-offcanvas__cta" href="#cta">
          <span class="uk-margin-small-right" data-uk-icon="icon: commenting"></span>Gespräch starten
        </a>
      </div>
    </div>

    <section id="hero" class="qr-hero uk-section uk-section-large calhelp-hero">
      <div class="qr-hero-bg hero-bg-calserver" aria-hidden="true">
        <canvas class="calhelp-hero-bg__canvas"></canvas>
      </div>
      <div class="uk-container">
        <div class="uk-grid uk-grid-large uk-child-width-1-2@m uk-flex-middle calhelp-hero-grid" data-uk-grid>
          <div class="calhelp-hero-grid__content">
            <h1 class="qr-h1">calHelp – Ein System. Klare Prozesse. Beratung für Kalibrier-, Prüf- &amp; Inventarprozesse</h1>
            <p class="qr-sub">Wir begleiten Labor-, Service- und Inventarteams von der Analyse bis zum auditfähigen Betrieb – mit klaren Zuständigkeiten, Nachweisen und Routinen.</p>
            <div class="uk-margin-medium-top uk-flex uk-flex-left uk-flex-wrap" style="gap:16px;">
              <a class="uk-button uk-button-primary" href="#cta">
                <span class="uk-margin-small-right" data-uk-icon="icon: commenting"></span>Gespräch starten
              </a>
              <a class="uk-button uk-button-secondary" href="#quick-check">
                <span class="uk-margin-small-right" data-uk-icon="icon: clock"></span>15-Min-Kurz-Check
              </a>
            </div>
            <p class="calhelp-trust">In Deutschland betreibbar &middot; DSGVO-konform &middot; &gt;15 Jahre Projekterfahrung</p>
          </div>
          <div class="calhelp-hero-grid__media">
            <div class="calhelp-hero-card uk-card uk-card-default uk-card-body">
              <h2 class="uk-card-title">Worauf Sie setzen können</h2>
              <ul class="uk-list uk-list-bullet hero-list">
                <li>Routinen bleiben bestehen – wir schließen Medienbrüche sauber.</li>
                <li>Nachweise sind nachvollziehbar, versioniert und auditbereit.</li>
                <li>Erste Verbesserungen werden in wenigen Wochen sichtbar.</li>
              </ul>
              <p class="uk-text-small uk-margin-top">Wir planen den Umstieg so, dass der Alltag weiterläuft.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div id="quick-check" class="calhelp-anchor-target" aria-hidden="true" tabindex="-1"></div>

    <section id="trust" class="uk-section uk-section-default">
      <div class="uk-container">
        <div class="uk-text-center uk-width-2-3@m uk-margin-auto">
          <span class="qr-badge pill pill--soft">Vertrauen</span>
          <h2 class="qr-h2 uk-margin-small-top">Verlässliche Basis für regulierte Abläufe</h2>
          <p class="uk-text-lead">Wir kombinieren Beratung, Betrieb und Dokumentation – auditfest, nachvollziehbar und datensicher.</p>
        </div>
        <div class="uk-grid uk-grid-small uk-child-width-1-2@s uk-child-width-1-4@m uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-text-center uk-height-1-1">
              <span class="qr-badge pill pill--soft">Audit-ready</span>
              <p class="uk-margin-small-top uk-margin-remove-bottom">Auditfähige Nachweise &amp; SOPs aus einer Quelle.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-text-center uk-height-1-1">
              <span class="qr-badge pill pill--soft">Hosting DE</span>
              <p class="uk-margin-small-top uk-margin-remove-bottom">DSGVO-konformer Betrieb mit deutschen Rechenzentren.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-text-center uk-height-1-1">
              <span class="qr-badge pill pill--soft">Partnernetz</span>
              <p class="uk-margin-small-top uk-margin-remove-bottom">Geprüfte Spezialisten für Kalibrier- &amp; Prüfprozesse.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-text-center uk-height-1-1">
              <span class="qr-badge pill pill--soft">15+ Jahre</span>
              <p class="uk-margin-small-top uk-margin-remove-bottom">Erfahrung aus Industrie, Laboren und öffentlicher Hand.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="kennzahlen" class="uk-section uk-section-muted">
      <div class="uk-container">
        <div class="uk-text-center uk-width-3-4@m uk-margin-auto">
          <span class="qr-badge pill pill--soft">Kennzahlen</span>
          <h2 class="qr-h2 uk-margin-small-top">Messbare Wirkung für Ihren Betrieb</h2>
          <p class="uk-text-lead">Wir legen Ziele gemeinsam fest, messen kontinuierlich nach und übertragen Best Practices auf alle Standorte.</p>
        </div>
        <div class="uk-grid uk-grid-medium uk-child-width-1-1@s uk-child-width-1-3@m uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-text-center uk-height-1-1"
                 data-uk-tooltip="title: So messen wir das: Vergleich der durchschnittlichen Suchzeit aus Ticket-Logs vor und nach dem Rollout in drei Service-Teams.; pos: bottom"
                 aria-describedby="kennzahlen-suchzeit">
              <span class="qr-badge pill pill--soft">-35% Suchzeit</span>
              <p class="uk-margin-small-top uk-margin-remove-bottom">Digitale Suchpfade und Rollen sorgen für weniger Aufwand im Tagesgeschäft.</p>
              <span id="kennzahlen-suchzeit" class="uk-hidden-visually">So messen wir das: Vergleich der durchschnittlichen Suchzeit aus Ticket-Logs vor und nach dem Rollout in drei Service-Teams.</span>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-text-center uk-height-1-1"
                 data-uk-tooltip="title: So messen wir das: Erfassung der Erstfreigaben in unserem QS-Modul über zwei Auditzyklen.; pos: bottom"
                 aria-describedby="kennzahlen-erstabnahme">
              <span class="qr-badge pill pill--soft">&gt;90% Erst-Abnahme</span>
              <p class="uk-margin-small-top uk-margin-remove-bottom">Klare Prüfkataloge, Freigaben und Vorlagen reduzieren Schleifen.</p>
              <span id="kennzahlen-erstabnahme" class="uk-hidden-visually">So messen wir das: Erfassung der Erstfreigaben in unserem QS-Modul über zwei Auditzyklen.</span>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-text-center uk-height-1-1"
                 data-uk-tooltip="title: So messen wir das: Abgleich der erfassten Datensätze zwischen ERP-Schnittstelle und Mobil-App über 6 Monate.; pos: bottom"
                 aria-describedby="kennzahlen-dubletten">
              <span class="qr-badge pill pill--soft">0 doppelte Eingaben</span>
              <p class="uk-margin-small-top uk-margin-remove-bottom">Durchgängige Datenerfassung verbindet ERP, Labor und Einsatzteams.</p>
              <span id="kennzahlen-dubletten" class="uk-hidden-visually">So messen wir das: Abgleich der erfassten Datensätze zwischen ERP-Schnittstelle und Mobil-App über 6 Monate.</span>
            </div>
          </div>
        </div>
        <div class="uk-grid uk-grid-small uk-child-width-auto uk-flex-center uk-margin-large-top" data-uk-grid>
          <div>
            <span class="qr-badge pill pill--soft">99,9% Uptime</span>
          </div>
          <div>
            <span class="qr-badge pill pill--soft">17 Jahre Praxis</span>
          </div>
          <div>
            <span class="qr-badge pill pill--soft">Community &gt;250 Fachleute</span>
          </div>
        </div>
      </div>
    </section>

    <section id="situationen" class="uk-section uk-section-muted">
      <div class="uk-container uk-container-small">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">Situationen</span>
          <h2 class="qr-h2 uk-margin-small-top">Woran wir pragmatisch ansetzen</h2>
          <p class="uk-text-lead">Wir priorisieren entlang Ihrer Engpässe – damit Verbesserungen schnell sichtbar werden.</p>
        </div>
        <ul class="uk-list uk-list-large uk-margin-large-top">
          <li class="uk-flex uk-flex-middle">
            <span class="uk-margin-small-right" data-uk-icon="icon: calendar"></span>
            <span><strong>Übervolle Prüffristen:</strong> Wir schaffen planbare Prüfkalender und automatisierte Erinnerungen.</span>
          </li>
          <li class="uk-flex uk-flex-middle">
            <span class="uk-margin-small-right" data-uk-icon="icon: database"></span>
            <span><strong>Insellösungen &amp; Excel:</strong> Wir führen Datenquellen zusammen und sichern Versionen.</span>
          </li>
          <li class="uk-flex uk-flex-middle">
            <span class="uk-margin-small-right" data-uk-icon="icon: users"></span>
            <span><strong>Unklare Zuständigkeiten:</strong> Wir definieren Rollen, Freigaben und Eskalationspfade.</span>
          </li>
        </ul>
        <p class="uk-text-center uk-margin-medium-top">Direkt einsteigen? <a class="uk-link-heading" href="#quick-check">15-Min-Kurz-Check anfragen</a></p>
      </div>
    </section>

    <section id="stories" class="uk-section uk-section-secondary uk-light">
      <div class="uk-container">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">Praxis-Stories</span>
          <h2 class="qr-h2 uk-margin-small-top">Erfahrungen aus Projekten</h2>
          <p class="uk-text-lead">Drei Beispiele, wie Teams mit unserem Framework Ergebnisse liefern.</p>
        </div>
        <div class="uk-grid uk-child-width-1-3@m uk-child-width-1-1 uk-grid-match uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-secondary uk-card-body uk-height-1-1">
              <span class="qr-badge pill pill--soft">12 Standorte</span>
              <h3 class="uk-card-title uk-margin-top">Kalibrierlabor</h3>
              <p>Rollout eines zentralen Kalibrierprozesses inkl. digitalem Prüfmittelpass und rückverfolgbaren Freigaben.</p>
              <ul class="uk-list uk-list-bullet">
                <li>Medienbrüche eliminiert</li>
                <li>Audit in 6 Wochen bestanden</li>
              </ul>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-height-1-1">
              <span class="qr-badge pill pill--soft">-35% Durchlaufzeit</span>
              <h3 class="uk-card-title uk-margin-top">Servicebetrieb</h3>
              <p>Automatisierte Einsatzplanung und mobile Nachweise für Techniker mit sofortigem Kunden-Feedback.</p>
              <ul class="uk-list uk-list-bullet">
                <li>Digitale Auftragsmappe eingeführt</li>
                <li>Qualitätsreports im Kundenportal</li>
              </ul>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-primary uk-card-body uk-height-1-1">
              <span class="qr-badge pill pill--soft">100% Inventar sichtbar</span>
              <h3 class="uk-card-title uk-margin-top">Öffentliche Einrichtung</h3>
              <p>Transparente Inventur mit IoT-Erfassung, lückenlosen Übergaben und geschützten Zugriffsrechten.</p>
              <ul class="uk-list uk-list-bullet">
                <li>Live-Status pro Standort</li>
                <li>Sofort verfügbare Prüfberichte</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="wirkung" class="uk-section uk-section-default">
      <div class="uk-container">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">Nutzen</span>
          <h2 class="qr-h2 uk-margin-small-top">Wirksamkeit für Ihr Team</h2>
          <p class="uk-text-lead">Klar strukturierte Abläufe entlasten Fachkräfte und schaffen Vertrauen bei Prüfstellen.</p>
        </div>
        <div class="uk-grid uk-grid-match uk-child-width-1-2@m uk-child-width-1-1 uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-height-1-1">
              <h3 class="uk-card-title">Schnell messbar</h3>
              <p>Wir liefern erste Kennzahlen nach vier Wochen – mit Dashboard und dokumentierten Annahmen.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-height-1-1">
              <h3 class="uk-card-title">Transparente Verantwortungen</h3>
              <p>Rollenbasierte Aufgabenlisten halten Teams synchron und Nachweise vollständig.</p>
            </div>
          </div>
