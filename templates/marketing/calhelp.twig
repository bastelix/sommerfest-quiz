{% extends 'layout.twig' %}

{% set links = [
  { 'href': '#hero', 'label': 'Start', 'icon': 'home' },
  { 'href': '#why', 'label': 'Nutzen', 'icon': 'bolt' },
  { 'href': '#vision', 'label': 'Vision', 'icon': 'lightbulb' },
  { 'href': '#services', 'label': 'Leistungen', 'icon': 'grid' },
  { 'href': '#process', 'label': 'Vorgehen', 'icon': 'settings' },
  { 'href': '#results', 'label': 'Ergebnisse', 'icon': 'check' },
  { 'href': '#faq', 'label': 'FAQ', 'icon': 'question' },
  { 'href': '#cta', 'label': 'Kontakt', 'icon': 'bolt' }
] %}
{% if marketingWikiMenu is defined %}
  {% set links = links|merge([{ 'href': marketingWikiMenu.url, 'label': marketingWikiMenu.label, 'icon': 'file-text' }]) %}
{% endif %}

{% block title %}{{ metaTitle|default('calHelp – Digitale Abläufe, die zu Ihrem Team passen') }}{% endblock %}

{% block head %}
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="preload" href="{{ basePath }}/css/landing.css" as="style">
  <link rel="stylesheet" href="{{ basePath }}/css/landing.css">
  <link rel="stylesheet" href="{{ basePath }}/css/calserver.css">
  <link rel="stylesheet" href="{{ basePath }}/css/highcontrast.css">
  <link rel="stylesheet" href="{{ basePath }}/css/onboarding.css">
  <link rel="stylesheet" href="{{ basePath }}/css/topbar.landing.css">
  <link rel="stylesheet" href="{{ basePath }}/css/calhelp.css">
  <meta name="page-name" content="calHelp – Marketingseite">
{% endblock %}

{% block body_theme %}light{% endblock %}
{% block body_class %}qr-landing calserver-theme calhelp-theme{% endblock %}

{% block body %}
  <div class="landing-content">
    <header class="qr-topbar">
      <nav class="uk-navbar-container" data-uk-navbar>
        <div class="uk-navbar-left">
          <div class="uk-navbar-item">
            <button id="offcanvas-toggle"
                    class="uk-navbar-toggle uk-hidden@m git-btn"
                    data-uk-navbar-toggle-icon
                    data-uk-toggle="target: #qr-offcanvas"
                    aria-controls="qr-offcanvas"
                    aria-expanded="false"
                    aria-label="Menü"></button>
            <a class="uk-logo cs-logo calhelp-logo" href="{{ basePath }}/calhelp">
              <span class="cs-logo__sr">CalHelp</span>
              <span class="cs-logo__image" aria-hidden="true">
                <img class="cs-logo__img"
                     src="{{ basePath }}/uploads/calserver-logo.webp"
                     alt=""
                     loading="eager"
                     decoding="async">
              </span>
              <span class="cs-logo__wordmark" aria-hidden="true">CalHelp</span>
            </a>
          </div>
        </div>
        <div class="uk-navbar-right">
          <ul class="uk-navbar-nav uk-visible@m calhelp-nav">
            {% for link in links %}
              <li>
                <a href="{{ link.href }}">
                  <span class="uk-margin-small-right" data-uk-icon="icon: {{ link.icon }}"></span>{{ link.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
          <div class="uk-navbar-item config-menu uk-inline">
            <button id="configMenuToggle"
                    type="button"
                    class="uk-button uk-button-default git-btn"
                    aria-label="Konfiguration"
                    aria-expanded="false">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M19.14 12.94a7.5 7.5 0 0 0 .05-.94 7.5 7.5 0 0 0-.05-.94l2.03-1.58a.5.5 0 0 0 .12-.64l-1.92-3.33a.5.5 0 0 0-.6-.22l-2.39.96a7.6 7.6 0 0 0-1.63-.94l-.36-2.54a.5.5 0 0 0-.5-.43h-3.84a.5.5 0 0 0-.5.43l-.36 2.54c-.57.24-1.12.55-1.63.94l-2.39-.96a.5.5 0 0 0-.6.22L2.7 7.84a.5.5 0 0 0 .12.64l2.03 1.58c-.03.31-.05.63-.05.94s.02.63.05.94L2.82 13.5a.5.5 0 0 0-.12.64l1.92 3.33a.5.5 0 0 0 .6.22l2.39-.96c.51.39 1.06.7 1.63.94l.36 2.54a.5.5 0 0 0 .5.43h3.84a.5.5 0 0 0 .5-.43l.36-2.54c.57-.24 1.12-.55 1.63-.94l2.39.96a.5.5 0 0 0 .6-.22l1.92-3.33a.5.5 0 0 0-.12-.64l-2.03-1.58ZM12 15.5A3.5 3.5 0 1 1 12 8.5a3.5 3.5 0 0 1 0 7Z"
                      fill="currentColor"/>
              </svg>
            </button>
            <div id="menuDrop"
                 class="uk-dropdown"
                 hidden
                 data-uk-dropdown="mode: click; pos: bottom-right; flip: false; animation: uk-animation-slide-top-small">
              <ul class="uk-nav uk-dropdown-nav" role="menu">
                <li>
                  <button id="themeToggle"
                          class="uk-button uk-button-default git-btn theme-toggle"
                          aria-label="Design umschalten"
                          role="menuitem">
                    <span id="themeIcon" class="theme-icon" aria-hidden="true"></span>
                  </button>
                </li>
                <li>
                  <button id="accessibilityToggle"
                          class="uk-button uk-button-default git-btn accessibility-toggle"
                          aria-label="Kontrast umschalten"
                          role="menuitem">
                    <span id="accessibilityIcon" class="accessibility-icon" aria-hidden="true"></span>
                  </button>
                </li>
                <li>
                  <div class="uk-inline">
                    <button id="languageMenuToggle"
                            type="button"
                            class="uk-button uk-button-default git-btn"
                            aria-label="{{ t('language_toggle') }}"
                            aria-expanded="false"
                            role="menuitem">
                      <svg viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm6.93 6h-2.54c-.11-1.47-.43-2.87-.92-4.17 1.84.69 3.29 2.1 4.05 3.84zM12 4c.96 1.18 1.62 2.64 1.88 4H10.12c.26-1.36.92-2.82 1.88-4zM4.26 14c-.17-.64-.26-1.31-.26-2s.09-1.36.26-2h3.09c-.07.66-.11 1.32-.11 2s.04 1.34.11 2H4.26zm.81 2h2.54c.11 1.47.43 2.87.92 4.17-1.84-.69-3.29-2.1-4.05-3.84zm2.54-8H5.07c.76-1.74 2.21-3.15 4.05-3.84-.49 1.3-.81 2.7-.92 4.17zM12 20c-.96-1.18-1.62-2.64-1.88-4h3.76c-.26 1.36-.92 2.82-1.88 4zm2.62-6H9.38c-.08-.66-.12-1.32-.12-2s.04-1.34.12-2h5.24c.08.66.12 1.32.12 2s-.04 1.34-.12 2zm.81 6c.49-1.3.81-2.7.92-4.17h2.54c-.76 1.74-2.21 3.15-4.05 3.84zM16.65 14c.07-.66.11-1.32.11-2s-.04-1.34-.11-2h3.09c.17.64.26 1.31.26 2s-.09 1.36-.26 2h-3.09z"
                              fill="currentColor"/>
                      </svg>
                    </button>
                    <div id="languageDrop" class="uk-dropdown" hidden data-uk-dropdown="mode: click; pos: left-top; offset: 0">
                      <ul class="uk-nav uk-dropdown-nav" role="menu">
                        <li>
                          <button class="uk-button uk-button-default git-btn lang-option"
                                  data-lang="de"
                                  role="menuitem">
                            <span class="lang-option__icon" aria-hidden="true">
                              <svg class="lang-option__svg" viewBox="0 0 24 16" role="img" focusable="false">
                                <rect width="24" height="16" fill="#ffce00" />
                                <rect width="24" height="10.6667" fill="#dd0000" />
                                <rect width="24" height="5.3333" fill="#000000" />
                              </svg>
                            </span>
                            <span class="lang-option__label">{{ t('german') }}</span>
                          </button>
                        </li>
                        <li>
                          <button class="uk-button uk-button-default git-btn lang-option"
                                  data-lang="en"
                                  role="menuitem">
                            <span class="lang-option__icon" aria-hidden="true">
                              <svg class="lang-option__svg" viewBox="0 0 24 16" role="img" focusable="false">
                                <rect width="24" height="16" fill="#012169" />
                                <path fill="#ffffff" d="M0 0h3.2L24 13.6V16h-3.2L0 2.4z" />
                                <path fill="#ffffff" d="M24 0h-3.2L0 13.6V16h3.2L24 2.4z" />
                                <path fill="#c8102e" d="M0 0h1.6L24 12.8V16h-1.6L0 3.2z" />
                                <path fill="#c8102e" d="M24 0h-1.6L0 12.8V16h1.6L24 3.2z" />
                                <rect x="10" width="4" height="16" fill="#ffffff" />
                                <rect y="6" width="24" height="4" fill="#ffffff" />
                                <rect x="10.8" width="2.4" height="16" fill="#c8102e" />
                                <rect y="6.8" width="24" height="2.4" fill="#c8102e" />
                              </svg>
                            </span>
                            <span class="lang-option__label">{{ t('english') }}</span>
                          </button>
                        </li>
                      </ul>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <div id="qr-offcanvas" data-uk-offcanvas="overlay: true; flip: true">
      <div class="uk-offcanvas-bar calhelp-offcanvas">
        <button class="uk-offcanvas-close git-btn" type="button" data-uk-close aria-label="Menü schließen"></button>
        <div class="calhelp-offcanvas__inner">
          <ul class="uk-nav uk-nav-default calhelp-offcanvas__nav">
            {% for link in links %}
              <li>
                <a href="{{ link.href }}">
                  <span class="uk-margin-small-right" data-uk-icon="icon: {{ link.icon }}"></span>{{ link.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <a class="uk-button uk-button-primary uk-width-1-1 uk-margin-top calhelp-offcanvas__cta" href="#cta">
          <span class="uk-margin-small-right" data-uk-icon="icon: commenting"></span>Kostenfreies Erstgespräch
        </a>
      </div>
    </div>

    <section id="hero" class="qr-hero uk-section uk-section-large calhelp-hero">
      <div class="qr-hero-bg hero-bg-calserver" aria-hidden="true">
        <canvas class="calhelp-hero-bg__canvas"></canvas>
      </div>
      <div class="uk-container">
        <div class="uk-grid uk-grid-large uk-child-width-1-2@m uk-flex-middle calhelp-hero-grid" data-uk-grid>
          <div class="calhelp-hero-grid__content">
            <h1 class="qr-h1">Ein klarer Ablauf – so, wie Ihr Team ihn kennt.</h1>
            <p class="qr-sub">Wir digitalisieren eingespielte Abläufe in Labor, Service und Verwaltung – nachvollziehbar, prüfbar, alltagstauglich.</p>
            <div class="uk-margin-medium-top uk-flex uk-flex-left uk-flex-wrap" style="gap:16px;">
              <a class="uk-button uk-button-primary" href="#cta">
                <span class="uk-margin-small-right" data-uk-icon="icon: commenting"></span>Kostenfreies Erstgespräch vereinbaren
              </a>
              <a class="uk-button uk-button-default" href="#results">
                <span class="uk-margin-small-right" data-uk-icon="icon: calendar"></span>Beispiel-Nachweis ansehen
              </a>
            </div>
            <p class="calhelp-trust">In Deutschland betreut • auditfähig • schrittweise Einführung ohne Stillstand</p>
          </div>
          <div class="calhelp-hero-grid__media">
            <div class="calhelp-hero-card uk-card uk-card-default uk-card-body">
              <h2 class="uk-card-title">Worauf Sie setzen können</h2>
              <ul class="uk-list uk-list-bullet hero-list">
                <li>Routinen bleiben bestehen – wir schließen Medienbrüche sauber.</li>
                <li>Nachweise sind nachvollziehbar, versioniert und auditbereit.</li>
                <li>Erste Verbesserungen werden in wenigen Wochen sichtbar.</li>
              </ul>
              <p class="uk-text-small uk-margin-top">Wir planen den Umstieg so, dass der Alltag weiterläuft.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="why" class="uk-section uk-section-default">
      <div class="uk-container uk-container-small">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">Warum calHelp?</span>
          <h2 class="qr-h2 uk-margin-small-top">Nutzen in 30 Sekunden</h2>
          <p class="uk-text-lead">Wir bringen Struktur in tägliche Abläufe und schaffen die Grundlage für belastbare Nachweise.</p>
        </div>
        <div class="uk-grid uk-grid-match uk-child-width-1-2@m uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-body uk-height-1-1">
              <ul class="uk-list uk-list-large uk-list-divider">
                <li><strong>Weniger Reibung im Alltag:</strong> Ein klarer Ablauf statt „jeder macht es anders“.</li>
                <li><strong>Sichere Nachweise:</strong> Berichte und Dokumente, die Prüfungen bestehen.</li>
                <li><strong>Schnell greifbare Resultate:</strong> Sichtbare Verbesserungen in Wochen.</li>
                <li><strong>Transparenz &amp; Verantwortung:</strong> Jeder weiß, wer was bis wann erledigt.</li>
              </ul>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-primary uk-card-primary--highlight uk-card-body uk-height-1-1">
              <h3 class="uk-card-title">Ihr Use-Case in Fokus</h3>
              <p>Wir hören zu, priorisieren und zeigen, wie bestehende Abläufe digital funktionieren – ohne Big-Bang, ohne Risiko.</p>
              <a class="uk-button uk-button-default uk-margin-small-top" href="#cta">
                <span class="uk-margin-small-right" data-uk-icon="icon: search"></span>Ihren Use-Case prüfen
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="vision" class="uk-section calhelp-section-glow">
      <div class="uk-container uk-container-small">
        <div class="uk-text-center uk-light">
          <h2 class="qr-h2">Vision</h2>
          <p class="uk-text-lead">calHelp sorgt dafür, dass Ihre bewährten Routinen digital, nachvollziehbar und auditfähig funktionieren.</p>
          <p>Wir übernehmen, was sich bewährt hat, schließen Medienbrüche und machen Nachweise verlässlich – Schritt für Schritt, ohne Kulturbruch.</p>
        </div>
      </div>
    </section>

    <section id="services" class="uk-section uk-section-default">
      <div class="uk-container">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">Leistungen</span>
          <h2 class="qr-h2 uk-margin-small-top">Dienstleistungen – seriös, ohne Technikflut</h2>
          <p class="uk-text-lead">Wir verbinden Strategie, Daten, Nachweise und Betreuung zu einem reibungslosen Ganzen.</p>
        </div>
        <div class="uk-grid uk-grid-match uk-child-width-1-3@l uk-child-width-1-2@m uk-child-width-1-1 uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Strategie &amp; Prozess</h3>
              <p>Ist-Aufnahme des echten Alltags, Prioritäten setzen, Entscheidungsvorlage mit 2–3 realistischen Wegen (Aufwand, Nutzen, Zeitplan).</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Daten &amp; Umstieg</h3>
              <p>Sauberer Datenumzug inkl. Bereinigung und Testläufen – geplant, dokumentiert, ohne Stillstand.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Verbindungen &amp; Zugriffe</h3>
              <p>Sinnvolle System-Verknüpfungen und klare Zugriffsrechte für verlässliche Zuständigkeiten, Freigaben und Audits.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Nachweise &amp; Berichte</h3>
              <p>Prüffähige Berichte/Zertifikate mit Ihren Inhalten und Branding; zweisprachig möglich, mit Freigabe- und Versionsprozess.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Betrieb &amp; Betreuung</h3>
              <p>Aktualisierungen, Backups, Monitoring, unterstützender Support – für einen ruhigen, planbaren Alltag.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Wissen &amp; Training</h3>
              <p>Kompakte Trainings, Vorlagen und Handbücher – pro Rolle, damit Ihr Team schnell sicher arbeitet.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">(Optional) Webauftritt für Labore</h3>
              <p>Moderne, klare Website mit Leistungen, Formularen, Downloads; auf Wunsch Frage-Antwort-Assistent aus Ihren Inhalten.</p>
            </div>
          </div>
        </div>
        <div class="uk-text-center uk-margin-large-top">
          <a class="uk-button uk-button-primary" href="#cta">
            <span class="uk-margin-small-right" data-uk-icon="icon: commenting"></span>Leistungen im Gespräch abklären
          </a>
        </div>
      </div>
    </section>

    <section id="process" class="uk-section uk-section-muted">
      <div class="uk-container">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">So arbeiten wir</span>
          <h2 class="qr-h2 uk-margin-small-top">Vom Erstgespräch zur Einführung</h2>
          <p class="uk-text-lead">Drei Etappen, klar dokumentiert und nachvollziehbar.</p>
        </div>
        <div class="uk-grid uk-grid-match uk-child-width-1-3@m uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-body calhelp-step-card">
              <div class="calhelp-step-card__number">1</div>
              <h3 class="uk-card-title">Erstgespräch (30–45 Min.)</h3>
              <p>Ziele, Hürden, Quick-Wins. Wir hören zu und bringen Struktur in den Fahrplan.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body calhelp-step-card">
              <div class="calhelp-step-card__number">2</div>
              <h3 class="uk-card-title">Mini-Beweis (1–2 Wochen)</h3>
              <p>Ihr Prozess als Prototyp plus Beispiel-Nachweis – damit alle sehen, wie es funktioniert.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body calhelp-step-card">
              <div class="calhelp-step-card__number">3</div>
              <h3 class="uk-card-title">Einführung in Etappen</h3>
              <p>Live-Betrieb, Schulung, saubere Übergabe. Wir bleiben ansprechbar, bis alles sitzt.</p>
            </div>
          </div>
        </div>
        <p class="uk-text-center uk-margin-large-top uk-text-small">Dokumentiert • messbar • ohne Big-Bang</p>
      </div>
    </section>

    <section id="results" class="uk-section uk-section-default">
      <div class="uk-container">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">Ergebnisse aus Projekten</span>
          <h2 class="qr-h2 uk-margin-small-top">Verlässliche Resultate aus der Praxis</h2>
        </div>
        <div class="uk-grid uk-grid-match uk-child-width-1-3@m uk-child-width-1-1 uk-margin-large-top" data-uk-grid>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Kalibrierdienst</h3>
              <p>Medienbrüche reduziert, <strong>–30&nbsp;% Nacharbeit</strong>.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Inhouse-Labor</h3>
              <p>Zugriffe &amp; Verantwortlichkeiten klar, <strong>Audits souverän bestanden</strong>.</p>
            </div>
          </div>
          <div>
            <div class="uk-card uk-card-default uk-card-body">
              <h3 class="uk-card-title">Energie/Service</h3>
              <p>Wartungen &amp; Nachweise zentral, <strong>schnellere Freigaben</strong>.</p>
            </div>
          </div>
        </div>
        <div class="uk-text-center uk-margin-large-top">
          <a class="uk-button uk-button-default" href="#cta">
            <span class="uk-margin-small-right" data-uk-icon="icon: users"></span>Case-Talk vereinbaren
          </a>
        </div>
      </div>
    </section>

    <section id="faq" class="uk-section uk-section-muted">
      <div class="uk-container uk-container-small">
        <div class="uk-text-center">
          <span class="qr-badge pill pill--soft">FAQ</span>
          <h2 class="qr-h2 uk-margin-small-top">Häufige Fragen, schnell beantwortet</h2>
        </div>
        <ul class="uk-margin-large-top" data-uk-accordion>
          <li class="uk-open">
            <a class="uk-accordion-title" href="#">Ersetzen Sie unsere Abläufe komplett?</a>
            <div class="uk-accordion-content">
              <p>Nein. Bewährtes bleibt. Wir digitalisieren und verbessern gezielt.</p>
            </div>
          </li>
          <li>
            <a class="uk-accordion-title" href="#">Wie schnell sehen wir Ergebnisse?</a>
            <div class="uk-accordion-content">
              <p>Innerhalb weniger Wochen – mit einem greifbaren Beispiel-Nachweis.</p>
            </div>
          </li>
          <li>
            <a class="uk-accordion-title" href="#">Müssen wir sofort alles umstellen?</a>
            <div class="uk-accordion-content">
              <p>Nein. Wir führen schrittweise ein, ohne den Alltag zu stören.</p>
            </div>
          </li>
        </ul>
      </div>
    </section>

    <section id="cta" class="uk-section uk-section-large">
      <div class="uk-container">
        <div class="uk-grid uk-grid-large uk-child-width-1-2@m uk-flex-middle" data-uk-grid>
          <div>
            <h2 class="qr-h2">Bereit für klarere Abläufe?</h2>
            <p class="uk-text-lead">Wir planen mit Ihnen den nächsten Schritt – vom Erstgespräch bis zur sauberen Einführung.</p>
            <div class="uk-flex uk-flex-left uk-flex-wrap uk-margin-medium-top" style="gap:16px;">
              <a class="uk-button uk-button-primary" href="https://calendly.com/calhelp/erstgespraech" target="_blank" rel="noopener">
