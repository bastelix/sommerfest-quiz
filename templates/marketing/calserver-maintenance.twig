    <div class="footer-section footer-about">
      <strong>calHelp</strong>
      <p>{{ t('calserver_footer_tagline') }}</p>
    </div>
    <div class="footer-section footer-contact">
      <strong>Kontakt</strong>
      <p>
        René Buske<br>
        <a
          class="js-email-link"
          data-user="office"
