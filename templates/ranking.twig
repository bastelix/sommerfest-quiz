{% extends 'layout.twig' %}

{% block title %}Mein Ranking{% endblock %}

{% block body_theme %}{% set cfg = config is defined ? config : {} %}{% set theme = attribute(cfg, 'startTheme')|default('light')|lower %}{{ theme == 'dark' ? 'dark' : 'light' }}{% endblock %}

{% block head %}
  <link rel="stylesheet" href="{{ basePath }}/css/main.css">
  {% set cfg = config is defined ? config : {} %}
  {% set theme = attribute(cfg, 'startTheme')|default('light')|lower %}
  {% set prefersDark = theme == 'dark' %}
  {% set darkMedia = prefersDark ? 'all' : '(prefers-color-scheme: dark)' %}
  <link rel="stylesheet" href="{{ basePath }}/css/dark.css" media="{{ darkMedia }}"{% if not prefersDark %} disabled{% endif %}>
  <link rel="stylesheet" href="{{ basePath }}/css/highcontrast.css">
{% endblock %}

{% block body_class %}uk-padding{% endblock %}

{% block body %}
  {% embed 'topbar.twig' %}
    {% block left %}
      <a href="{{ basePath }}/" class="uk-icon-button" uk-icon="icon: arrow-left; ratio: 2" title="Zurück" aria-label="Zurück"></a>
    {% endblock %}
    {% block center %}
      <div class="uk-flex uk-flex-middle">
        <span id="eventTitle" class="uk-navbar-title uk-text-center">{{ event.name|default('Sommerfest 2025') }}</span>
      </div>
    {% endblock %}
  {% endembed %}
  <div class="uk-container uk-container-small">
    <div class="uk-flex uk-flex-column uk-flex-row@s uk-flex-between uk-flex-middle">
      <div>
        <h2 class="uk-heading-bullet uk-margin-small-bottom">Dein Ranking</h2>
        <p class="uk-text-lead uk-margin-remove-top">Spielername: <span id="rankingPlayerName" class="player-name-highlight">–</span></p>
        <p id="rankingNameHint" class="uk-text-meta uk-margin-small-top"></p>
        <form id="rankingContactForm" class="uk-form-stacked uk-margin-medium-top" novalidate>
          <div class="uk-margin-small">
            <label class="uk-form-label" for="rankingEmail">E-Mail-Adresse (optional)</label>
            <div class="uk-form-controls">
              <input id="rankingEmail" name="rankingEmail" class="uk-input" type="email" inputmode="email" autocomplete="email" placeholder="z. B. alex@example.de" aria-describedby="rankingEmailHelp rankingFormMessage">
            </div>
            <p id="rankingEmailHelp" class="uk-text-meta uk-margin-small-top">Wir nutzen deine Adresse ausschließlich für Rückfragen zu deinem Sommerfest-Ranking.</p>
          </div>
          <div class="uk-margin-small">
            <div class="uk-form-controls uk-flex uk-flex-middle">
              <input id="rankingConsent" name="rankingConsent" class="uk-checkbox" type="checkbox">
              <label class="uk-margin-small-left" for="rankingConsent">Ich bin damit einverstanden, dass mich das Sommerfest-Team per E-Mail zu Ergebnissen und möglichen Gewinnen informiert.</label>
            </div>
          </div>
          <p id="rankingFormMessage" class="uk-margin-small-top uk-text-meta" role="status" aria-live="polite" hidden></p>
          <button type="submit" class="uk-button uk-button-secondary uk-margin-small-top">Angaben speichern</button>
        </form>
      </div>
      <div class="uk-flex uk-flex-middle uk-margin-top uk-margin-remove-top@s">
        <button id="rankingChangeNameBtn" class="uk-button uk-button-default uk-margin-small-right">Name bearbeiten</button>
        <button id="rankingRefreshBtn" class="uk-button uk-button-primary">Aktualisieren</button>
      </div>
    </div>
    <div id="rankingStatus" class="uk-alert uk-alert-primary uk-margin-top" hidden></div>
    <div id="rankingWarning" class="uk-alert uk-alert-warning uk-margin-top" hidden></div>
    <div id="rankingCards" class="player-ranking-grid uk-grid-small uk-child-width-1-1 uk-child-width-1-3@s uk-margin-top" uk-grid></div>
    <div id="rankingEmpty" class="uk-alert uk-alert-warning uk-margin-top" hidden>
      <p class="uk-margin-remove">Noch keine Ergebnisse gefunden. Spiele ein Quiz oder aktualisiere später erneut.</p>
    </div>
    <div id="rankingTopLists" class="player-ranking-toplists uk-grid-small uk-child-width-1-1 uk-child-width-1-2@m uk-margin-large-top" uk-grid></div>
    <p id="rankingUpdatedAt" class="uk-text-meta uk-margin-large-top uk-text-center"></p>
  </div>
{% endblock %}

{% block scripts %}
  <script src="{{ basePath }}/js/custom-icons.js"></script>
  <script>
    window.quizConfig = {{ config|json_encode|raw }};
  </script>
  <script src="{{ basePath }}/js/storage.js"></script>
  <script type="module" src="{{ basePath }}/js/ranking.js"></script>
{% endblock %}
