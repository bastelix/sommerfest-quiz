# Beispiel für die lokale .env-Konfiguration

# DOMAIN legt die Basis-Domain für alle Mandanten fest.
DOMAIN=example.com

# MAIN_DOMAIN bezeichnet die zentrale Marketing-Domain des Containers.
MAIN_DOMAIN=quizrace.app

# SLIM_VIRTUAL_HOST steuert den Hostnamen des PHP-Containers.
SLIM_VIRTUAL_HOST=example.com

# LETSENCRYPT_EMAIL wird für die Erstellung von Zertifikaten verwendet.
LETSENCRYPT_EMAIL=admin@example.com

# Datenbankzugang für PostgreSQL
POSTGRES_DSN=pgsql:host=postgres;dbname=quiz
POSTGRES_USER=quiz
# POSTGRES_PASS ist veraltet und entspricht POSTGRES_PASSWORD
POSTGRES_PASS=quiz
POSTGRES_PASSWORD=quiz
POSTGRES_DB=quiz

# Service-Account für das automatisierte Onboarding
SERVICE_USER=robot
SERVICE_PASS=secret

# Optionaler Basis-Pfad der Anwendung
BASE_PATH=

# Maximal zulässige Größe von HTTP-Requests
CLIENT_MAX_BODY_SIZE=50m

# Bei 1 wird nginx nach neuen Mandanten automatisch neu geladen
NGINX_RELOAD=1
